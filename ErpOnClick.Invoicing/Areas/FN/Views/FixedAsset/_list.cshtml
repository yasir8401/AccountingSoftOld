@using ErpOnClick.DAL.Models
@using ErpOnClick.Invoicing.Resources
@inject LocService SharedLocalizer

@{
    List<FixedAsset> FixedAssetIdList = Model.FixedAssetIdList;

}

<div class="table-responsive pb-2 ">
    <table id="dtList" class="table table-hover table-condensed ">
        <thead class="text-sm ">
            <tr class="col-lg-12">
                <th style="width:20px">@SharedLocalizer.GetLocalizedHtmlString("Id")</th>
                <th>@SharedLocalizer.GetLocalizedHtmlString("Name")</th>
                <th>@SharedLocalizer.GetLocalizedHtmlString("Asset Type")</th>
                <th>@SharedLocalizer.GetLocalizedHtmlString("Purchase Date") </th>
                <th>@SharedLocalizer.GetLocalizedHtmlString("Warranty Date") </th>
                <th>@SharedLocalizer.GetLocalizedHtmlString("Purchase Price") </th>


                <th style="width:25px">@SharedLocalizer.GetLocalizedHtmlString("Edit")</th>
                <th style="width:25px">@SharedLocalizer.GetLocalizedHtmlString("Delete")</th>
            </tr>
        </thead>
        <tfoot style="display:table-row-group">
            <tr class="text-center">
                <th style="width:20px">ID</th>
                <th>Name</th>
                <th>Asset Type</th>
                <th>Purchase Date</th>
                <th>Warranty Date</th>
                <th>Purchase Price </th>


                <td></td>
                <td></td>
            </tr>
        </tfoot>
        <tbody>
            @foreach (var item in FixedAssetIdList)
            {

                <tr class="text-center">
                    <td style="width:20px">@item.FixedAssetId</td>
                    <td class="text-left">@item.FixedAssetEn</td>
                    <td>@(item.AssetType != null ? item.AssetType.LookupNameEn : "")</td>
                    <td>@Convert.ToDateTime(item.PurchaseDate).ToString("dd-MMM-yyyy")</td>
                    <td>@Convert.ToDateTime(item.WarrantyExpiry).ToString("dd-MMM-yyyy")</td>
                    <td class="text-right">@item.PurchasePrice</td>


                    <td class="text-center">
                        <a href="~/fn/FixedAsset/edit/@item.FixedAssetId" class="btn btn-default btn-block  btn-xs "><i class="fa fa-edit"></i></a>
                    </td>
                    <td class="text-center">
                        <a href="javascript:void(0)" class="btn btn-default btn-block btn-xs " onclick="deleteItem('@item.FixedAssetId')"><i class="fa fa-times text-danger"></i></a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>


<script>
    $(function () {
        _initDatatable('#dtList');
    });

    function deleteItem(id) {
        confirmAction('Confirm ?', 'Are you sure you want to save changes ?', 'info', 'Yes', 'No').then(function (result) {
            if (result.value == true) {

                $.ajax({
                    url: getApplicationName() + 'fn/FixedAsset/delete',
                    async: false,
                    type: "POST",
                    data: { id },
                    success: function (data) {
                        if (data.result.isError != true) {
                            showMsg('Deleted !', 'Record has been deleted !', 'success');
                            setTimeout(function () {
                                window.location = getApplicationName() + 'fn/FixedAsset';
                            }, 500);
                        }
                        else if (data.result.msg != '') {
                            showMsg('Delete Failed !', data.result.msg, 'error');
                        }
                        else {
                            showMsg('Delete Failed !', 'Something went wrong. Try again', 'error');
                        }
                    }
                });
            }
        });
    }

</script>