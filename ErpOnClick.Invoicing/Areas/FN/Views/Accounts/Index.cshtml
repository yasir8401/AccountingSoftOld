@using ErpOnClick.DAL.Models
@using ErpOnClick.Invoicing.Resources
@inject LocService SharedLocalizer

@{ List<AccountTypes> AccountTypes = Model.AccountsTypes;
                List<AccountGroups> AccountGroups = Model.AccountsGroups; }
@section TabName{
    Lookup Setup
}


<div class="card card-default card-outline">

    <div class="card-header">
        <h2 class="card-title">
            @SharedLocalizer.GetLocalizedHtmlString("Accounts")
        </h2>
        <!-- tools box -->
        <div class="card-tools">
            <a id="printList" href="" target="_blank" class="btn btn-default btn-sm"><i class="fa fa-print fa-fw"></i>@SharedLocalizer.GetLocalizedHtmlString("Print")</a>

            <a href="~/fn/Accounts/edit" type="button" class="btn btn-sm btn-primary">
                <i class="fas fa-plus"></i> @SharedLocalizer.GetLocalizedHtmlString("Add New")
            </a>
        </div>
        <!-- /. tools -->
    </div>
    <div class="card-footer pb-0 pt-2 text-sm">
        <form id="frmSearch">
            <div class="row">
                <div class="col-sm-3">
                    <div class="form-group ">
                        <label>@SharedLocalizer.GetLocalizedHtmlString("Account Type")</label>
                        <select name="TypeId" id="TypeId" class="form-control input-sm text-sm ">
                            <option value="">All</option>
                            @foreach (var item in AccountTypes)
                            {
                <option value="@item.AccountTypeId"> @item.AccountTypeNameEn</option>}
                        </select>
                    </div>
                </div>
                <div class="col-sm-3">
                    <div class="form-group ">
                        <label>@SharedLocalizer.GetLocalizedHtmlString("Account Group")</label>
                        <select name="GroupId" id="GroupId" class="form-control input-sm text-sm ">
                            <option value="">All</option>
                            @foreach (var item in AccountGroups)
                            {
                <option value="@item.AccountGroupId"> @item.AccountGroupNameEn</option>}
                        </select>
                    </div>
                </div>
                <div style="display:none">
                    <button type="submit" class="btn btn-default btn-block">Refresh</button>
                </div>
            </div>
        </form>
    </div>
    <div class="card-body">
        <div id="divList"></div>

    </div>
</div>


@section scripts{
    <script>
        $(function () {
            $('#frmSearch button').click();
        });

        $('#frmSearch').find('input, select').change(() => {
            $('#frmSearch button').click();
        });

        $('#frmSearch').submit(function (e) {
            e.preventDefault();
            BindGrid();

        });


        function BindGrid() {

            $('#divList').html('<h5 class="margin-0"><p><i class="fa fa-spinner fa-spin fa-fw"></i> Please wait while data is loading...</p></h5>');
            $.ajax({
                url: getApplicationName() + 'fn/Accounts/_list',
                data: $('#frmSearch').serialize(),
                success: function (data) {
                    $('#divList').html(data);
                }
            })
        }

        $('#printList').click(function (e) {
            var TypeId = $('#TypeId').val();
            var GroupId = $('#GroupId').val();
            window.open(getApplicationName() + "fn/Accounts/PrintList?TypeId=" + TypeId + "&GroupId=" + GroupId, "_blank");
        });
    </script>
}

