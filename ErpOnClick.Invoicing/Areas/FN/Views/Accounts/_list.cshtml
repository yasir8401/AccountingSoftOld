@using ErpOnClick.DAL.Models
@using ErpOnClick.Invoicing.Resources
@inject LocService SharedLocalizer

@{
    List<Accounts> AccountIdList = Model.AccountIdList;

}

<div class="table-responsive pb-2 ">
    <table id="dtList" class="table table-hover table-condensed ">
        <thead class="text-sm ">
            <tr class="col-lg-12">
                <th style="width:20px">@SharedLocalizer.GetLocalizedHtmlString("Id")</th>
                <th>@SharedLocalizer.GetLocalizedHtmlString("Name")</th>
                <th>@SharedLocalizer.GetLocalizedHtmlString("Name Arabic")</th>
                <th>@SharedLocalizer.GetLocalizedHtmlString("Code")</th>
                <th>@SharedLocalizer.GetLocalizedHtmlString("Type") </th>
                <th>@SharedLocalizer.GetLocalizedHtmlString("Group") </th>


                <th style="width:25px">@SharedLocalizer.GetLocalizedHtmlString("Edit")</th>
                <th style="width:25px">@SharedLocalizer.GetLocalizedHtmlString("Delete")</th>
            </tr>
        </thead>
        <tfoot style="display:table-row-group">
            <tr class="text-center">
                <th style="width:20px">ID</th>
                <th>Name EN</th>
                <th>Name AR</th>
                <th>Code</th>
                <th>Type </th>
                <th>Group </th>


                <td></td>
                <td></td>
            </tr>
        </tfoot>
        <tbody>
            @foreach (var item in AccountIdList)
            {

                <tr class="text-center">
                    <td style="width:20px">@item.AccountId</td>
                    <td class="text-left">@item.AccountNameEn</td>
                    <td class="text-right">@item.AccountNameAr</td>
                    <td>@item.AccountCode</td>
                    <td>@item.AccountType.AccountTypeNameEn</td>
                    <td>@item.AccountGroup.AccountGroupNameEn</td>


                    <td class="text-center">
                        <a href="~/fn/Accounts/edit/@item.AccountId" class="btn btn-default btn-block  btn-xs "><i class="fa fa-edit"></i></a>
                    </td>
                    <td class="text-center">
                        <a href="javascript:void(0)" class="btn btn-default btn-block btn-xs " onclick="deleteItem('@item.AccountId')"><i class="fa fa-times text-danger"></i></a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>


<script>
    $(function () {
        _initDatatable('#dtList');
    });

    function deleteItem(id) {
        confirmAction('Confirm ?', 'Are you sure you want to save changes ?', 'info', 'Yes', 'No').then(function (result) {
            if (result.value == true) {

                $.ajax({
                    url: getApplicationName() + 'fn/Accounts/delete',
                    async: false,
                    type: "POST",
                    data: { id },
                    success: function (data) {
                        if (data.result.isError != true) {
                            showMsg('Deleted !', 'Record has been deleted !', 'success');
                            setTimeout(function () {
                                window.location = getApplicationName() + 'fn/Accounts';
                            }, 500);
                        }
                        else if (data.result.msg != '') {
                            showMsg('Delete Failed !', data.result.msg, 'error');
                        }
                        else {
                            showMsg('Delete Failed !', 'Something went wrong. Try again', 'error');
                        }
                    }
                });
            }
        });
    }

</script>