@using ErpOnClick.DAL.Models
@using ErpOnClick.Invoicing.Resources
@inject LocService SharedLocalizer

@{
    Payments PaymentDetail = Model.IdDetail;
    List<Branch> BranchDetails = Model.branchList;
    List<Company> CompanyDetail = Model.CompanyDetail;
    List<Vendors> Vendors = Model.Vendors;
    List<Accounts> Accounts = Model.Accounts;




    bool isEdit = (PaymentDetail != null);
}



<form id="frmEdit" role="form">
    <input type="hidden" id="ACTION_TYPE" name="ACTION_TYPE" value="@(isEdit ? "update" : "save")" />
    <input type="hidden" id="PaymentId" name="PaymentId" class="form-control" value="@(PaymentDetail != null ? PaymentDetail.PaymentId : 0)" />


    <div class="card card-default card-outline col-lg-8">

        <div class="card-header">
            <h2 class="card-title">
                @SharedLocalizer.GetLocalizedHtmlString("Payment")
            </h2>
            <!-- tools box -->
            <div class="card-tools">
                <button type="submit" class="btn  btn-sm btn-primary">
                    <i class="fas fa-save fa-fw"></i> @SharedLocalizer.GetLocalizedHtmlString("Save")
                </button>
                <a href="~/admin/Payments" type="button" class="btn  btn-sm btn-default">
                    <i class="fas fa-arrow-left fa-fw"></i>@SharedLocalizer.GetLocalizedHtmlString("Return") 
                </a>
            </div>
            <!-- /. tools -->
        </div>
    </div>
    <div class="card card-default card-outline col-lg-8">
        <div class="card-header">
            <h2 class="card-title">
                @SharedLocalizer.GetLocalizedHtmlString("Payment Info")
            </h2>
        </div>
        <div class="card-body">

            <div class="row">
                <div class="col-sm-6">
                    <div class="form-group ">
                        <label>@SharedLocalizer.GetLocalizedHtmlString("Payment Date")</label>
                        <input name="PaymentDate" id="PaymentDate" class="form-control DatePicker" value="@(PaymentDetail != null && PaymentDetail.PaymentDate != null ? Convert.ToDateTime(PaymentDetail.PaymentDate).ToString("dd-MMM-yyyy") : "")" />

                    </div>
                </div>
                <div class="col-sm-6">
                    <div class="form-group">
                        <label>@SharedLocalizer.GetLocalizedHtmlString("Payment #")</label>
                        <input type="text" id="PaymentNo" name="PaymentNo" class="form-control" value="@(PaymentDetail!=null?PaymentDetail.PaymentNo: null)">
                    </div>
                </div>
                <div class="col-sm-6">
                    <div class="form-group">
                        <label>@SharedLocalizer.GetLocalizedHtmlString("Vendor")</label>
                        <select id="VendorId" name="VendorId" class="form-control" required>
                            <option></option>
                            @if (Vendors != null)
                            {
                                @foreach (var item in Vendors)
                                {
                                    <option value="@item.VendorId" @(PaymentDetail != null && item.VendorId == PaymentDetail.VendorId ? "selected" : "")> @item.VendorNameEn</option>

                                }
                            }
                        </select>
                    </div>
                </div>
                <div class="col-sm-6">
                    <div class="form-group">
                        <label>@SharedLocalizer.GetLocalizedHtmlString("Recipient Account")</label>
                        <select id="RecipientAccount" name="RecipientAccount" class="form-control">
                            <option>
                            </option>
                            @if (Accounts != null)
                            {
                                @foreach (var item in Accounts)
                                {
                                    <option value="@item.AccountId" @(PaymentDetail != null && item.AccountId == PaymentDetail.RecipientAccount ? "selected" : "")> @item.AccountNameEn</option>

                                }
                            }
                        </select>
                        @*<input type="number" id="RecipientAccount" name="RecipientAccount"  class="form-control" value="@(PaymentDetail!=null?PaymentDetail.RecipientAccount: null)">*@
                    </div>
                </div>
                <div class="col-sm-6">
                    <div class="form-group">
                        <label>@SharedLocalizer.GetLocalizedHtmlString("Destination Account")</label>
                        <select id="DestinationAccount" name="DestinationAccount" class="form-control">
                            <option>
                            </option>
                            @if (Accounts != null)
                            {
                                @foreach (var item in Accounts)
                                {
                                    <option value="@item.AccountId" @(PaymentDetail != null && item.AccountId == PaymentDetail.DestinationAccount ? "selected" : "")> @item.AccountNameEn</option>

                                }
                            }
                        </select>
                        @*<input type="number" id="DestinationAccount" name="DestinationAccount" class="form-control" value="@(PaymentDetail!=null?PaymentDetail.DestinationAccount: null)">*@
                    </div>
                </div>
                @*<div class="col-sm-6">
                        <div class="form-group ">
                            <label>Currency</label>
                            <select name="Currency" id="Currency" class="form-control">
                                <option></option>
                                @if (PaymentDetail != null)
                                {
                                    if (PaymentDetail.Currency == "USD")
                                    {
                                        <option value="USD" selected>USD</option>
                                        <option value="SAD">SAD</option>
                                    }
                                    else if (PaymentDetail.Currency == "SAD")
                                    {
                                        <option value="USD">USD</option>
                                        <option value="SAD" selected>SAD</option>
                                    }
                                }
                                else
                                {
                                    <option value="USD">USD</option>
                                    <option value="SAD">SAD</option>
                                }

                            </select>
                        </div>
                    </div>*@
                <div class="col-sm-6">
                    <div class="form-group">
                        <label>@SharedLocalizer.GetLocalizedHtmlString("Amount")</label>
                        <input type="number" step="any" id="Amount" name="Amount" required class="form-control" value="@(PaymentDetail!=null?PaymentDetail.Amount: null)">
                    </div>
                </div>
                <div class="col-sm-6">
                    <div class="form-group">
                        <label>@SharedLocalizer.GetLocalizedHtmlString("Ref No")</label>
                        <input type="text" id="RefNo" name="RefNo" class="form-control" value="@(PaymentDetail!=null?PaymentDetail.RefNo: "")">
                    </div>
                </div>


            </div>
        </div>
    </div>
    <div class="card card-default card-outline col-lg-8">
        <div class="card-header">
            <h2 class="card-title">
                @SharedLocalizer.GetLocalizedHtmlString("Note") 
            </h2>
        </div>
        <div class="card-body p-2">
            @*<div class="row">
                <div class="col-sm-12">
                    <div class="form-group">*@
            @*<label>Note</label>*@
            <textarea id="Note" name="Note" class="form-control" style="border:none" placeholder="Enter your comments here...">@(PaymentDetail != null ? PaymentDetail.Note:"")</textarea>

            @*</div>
                    </div>
                </div>*@
        </div>
    </div>
    <div class="card card-default card-outline col-lg-8">
        <div class="card-header">
            <h2 class="card-title">
                @SharedLocalizer.GetLocalizedHtmlString("Organization Details")
            </h2>
        </div>
        <div class="card-body">
            <div class="row">

                <div class="col-sm-6">
                    <div class="form-group">
                        <label>@SharedLocalizer.GetLocalizedHtmlString("Company")</label>
                        <select id="CompanyId" name="CompanyId" class="form-control" required>
                            <option></option>
                            @foreach (var item in Model.CompanyDetail)
                            {
                                <option value="@item.CompanyId" @(PaymentDetail != null && PaymentDetail.CompanyId == item.CompanyId ? "selected" : "")> @item.CoNameEn</option>

                            }
                        </select>
                    </div>
                </div>
                <div class="col-sm-6">
                    <div class="form-group">
                        <label>@SharedLocalizer.GetLocalizedHtmlString("Branch")</label>
                        <select id="BranchId" name="BranchId" class="form-control" required>
                            @if (isEdit)
                            {
                                @foreach (var item in BranchDetails)
                                {
                                    <option value="@item.BranchId" @(PaymentDetail != null && PaymentDetail.BranchId == item.BranchId ? "selected" : "")> @item.BranchNameEn</option>

                                }
                            }
                        </select>
                    </div>
                </div>
            </div>
        </div>
    </div>


</form>





@section scripts{

    <script>
        $(function () {

        });


        $('#frmEdit').on('submit', function (e) {
            e.preventDefault();
            var actionType = $('#ACTION_TYPE').val();

            confirmAction('Confirm ?', 'Are you sure you want to save changes ?', 'info', 'Yes', 'No').then(function (result) {
                if (result.value == true) {

                    var params = $('#frmEdit').serialize();
                    $.ajax({
                        url: getApplicationName() + "Admin/Payments/" + actionType,
                        async: false,
                        type: "POST",
                        data: params,
                        success: function (data) {
                            if (data.result.isError != true) {
                                showMsg('Saved !', 'Record has been saved !', 'success');
                                setTimeout(function () {
                                    window.location = getApplicationName() + 'admin/Payments';
                                }, 500);
                            }
                            else if (data.result.msg != '') {
                                showMsg('Save Failed !', data.result.msg, 'error');
                            }
                            else {
                                showMsg('Save Failed !', 'Something went wrong. Try again', 'error');
                            }
                        }
                    });
                }
            });




        });

        $('#CompanyId').change(function () {
            var id = $('#CompanyId').val();

            $.ajax({
                url: getApplicationName() + "Ajax/BranchCascading",
                async: false,
                type: "POST",
                data: { id: id },
                success: function (data) {
                    var item = '';

                    $.each(data.result, function (i, product) {
                        item += "<option value='" + product.branchId + "'>" + product.branchNameEn + "</option>";
                    });

                    $("#BranchId").html(item);

                }
            });

        });

    </script>

}