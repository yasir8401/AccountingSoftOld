@using ErpOnClick.DAL.Models
@using ErpOnClick.Invoicing.Resources
@inject LocService SharedLocalizer

@{
    List<TaxRates> TaxRatesIdList = Model.TaxRatesIdList;

}

<div class="table-responsive pb-2 ">
    <table id="dtList" class="table table-hover table-condensed ">
        <thead class="text-sm ">
            <tr class="col-lg-12">
                <th style="width:20px">@SharedLocalizer.GetLocalizedHtmlString("Id")</th>
                <th>@SharedLocalizer.GetLocalizedHtmlString("Tax Rate Name")</th>
                <th>@SharedLocalizer.GetLocalizedHtmlString("Tax Rate Name Arabic")</th>
                <th>@SharedLocalizer.GetLocalizedHtmlString("Tax Percent")</th>
                <th>@SharedLocalizer.GetLocalizedHtmlString("Active Status")</th>
                <th>@SharedLocalizer.GetLocalizedHtmlString("Is Default")</th>


                <th style="width:25px">@SharedLocalizer.GetLocalizedHtmlString("Edit")</th>
                <th style="width:25px">@SharedLocalizer.GetLocalizedHtmlString("Delete")</th>
            </tr>
        </thead>
        <tfoot style="display:table-row-group">
            <tr class="text-center">
                <th style="width:20px">ID</th>
                <th>Tax Rate Name EN</th>
                <th>Tax Rate Name AR</th>
                <th>Tax Percent</th>
                <th>Active Status</th>
                <th>Is Default</th>


                <td></td>
                <td></td>
            </tr>
        </tfoot>
        <tbody>
            @foreach (var item in TaxRatesIdList)
            {

                <tr class="text-center">
                    <td style="width:20px">@item.TaxRateId</td>
                    <td class="text-left">@item.TaxRateNameEn</td>
                    <td class="text-right">@item.TaxRateNameAr</td>
                    <td>@item.TaxPercent</td>
                    <td>
                        @if (item.ActiveStatus == "015001")
                        {
                            <i class="fa fa-check"></i>
                        }
                        else if (item.ActiveStatus == "015002")
                        {
                            <i class="fa fa-times"></i>
                        }
                    </td>
                    <td>
                        @if (item.IsDefault == true)
                        {
                            <i class="fa fa-check"></i>
                        }
                        else if (item.IsDefault != true)
                        {
                            <i class="fa fa-times"></i>
                        }
                    </td>


                    <td class="text-center">
                        <a href="~/admin/TaxRates/edit/@item.TaxRateId" class="btn btn-default btn-block  btn-xs "><i class="fa fa-edit"></i></a>
                    </td>
                    <td class="text-center">
                        <a href="javascript:void(0)" class="btn btn-default btn-block btn-xs " onclick="deleteItem('@item.TaxRateId')"><i class="fa fa-times text-danger"></i></a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>


<script>
    $(function () {
        _initDatatable('#dtList');
    });

    function deleteItem(id) {
        confirmAction('Confirm ?', 'Are you sure you want to save changes ?', 'info', 'Yes', 'No').then(function (result) {
            if (result.value == true) {

                $.ajax({
                    url: getApplicationName() + "admin/TaxRates/delete",
                    async: false,
                    type: "POST",
                    data: { id },
                    success: function (data) {
                        if (data.result.isError != true) {
                            showMsg('Deleted !', 'Record has been deleted !', 'success');
                            setTimeout(function () {
                                window.location = getApplicationName() + 'admin/TaxRates';
                            }, 500);
                        }
                        else if (data.result.msg != '') {
                            showMsg('Delete Failed !', data.result.msg, 'error');
                        }
                        else {
                            showMsg('Delete Failed !', 'Something went wrong. Try again', 'error');
                        }
                    }
                });
            }
        });
    }

</script>