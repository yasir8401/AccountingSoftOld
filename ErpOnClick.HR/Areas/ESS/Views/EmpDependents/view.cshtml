@using ErpOnClick.DAL.Models
@using ErpOnClick.ErpMain.Models
@using ErpOnClick.ErpMain.Resources
@inject LocService SharedLocalizer

@{
    IList<Branch> branchList = Model.branchList;
    IList<Company> companyList = Model.companyList;
    IList<Emp> empList = Model.empList;

    IList<Lookups> nationalityList = Model.nationalityList;
    IList<Lookups> genderList = Model.genderList;

    var empId = Model.empId;


    Emp empDetails = Model.empDetails;
    EmpDependents EmpDependentsDetails = Model.EmpDependentsDetails;
    bool isEdit = (EmpDependentsDetails != null);
}



<form id="frmEdit" role="form" enctype="multipart/form-data">
    <input type="hidden" id="ACTION_TYPE" name="ACTION_TYPE" value="@(isEdit ? "update" : "save")" />
    <input type="hidden" id="DependentId" name="DependentId" class="form-control" value="@(EmpDependentsDetails != null ? EmpDependentsDetails.DependentId : 0)" @(isEdit ? "readonly" : "") min="3" maxlength="3">
    <input type="hidden" id="CompanyId" name="CompanyId" class="form-control" value="@(EmpDependentsDetails != null ? EmpDependentsDetails.CompanyId : 0)" >
    <input type="hidden" id="BranchId" name="BranchId" class="form-control" value="@(EmpDependentsDetails != null ? EmpDependentsDetails.BranchId : 0)" >

    <div class="card card-default card-outline col-lg-12">
        <div class="card-header p-0 border-bottom-0">
            <div class="card" style="background-color: #496b6a">
            </div>
            <ul class="nav nav-tabs" id="custom-content-below-tab" role="tablist">
                <li class="nav-item">
                    <a class="nav-link" onclick="navigation('@empId')" href="javascript:void(0)"><i class="fa fa-info"></i> @SharedLocalizer.GetLocalizedHtmlString("General Info")</a>
                </li>

                @Html.Partial("/Areas/ESS/Views/Profile/_tabsPartial.cshtml", empDetails)


            </ul>
        </div>
        <div class="card-header">
            <h2 class="card-title">
                @SharedLocalizer.GetLocalizedHtmlString("Details")
            </h2>
            <!-- tools box -->
            <div class="card-tools">
               
                <a href="~/ESS/EmpDependents/emp/@empId" type="button" class="btn  btn-sm btn-default">
                    <i class="fas fa-arrow-left fa-fw"></i> @SharedLocalizer.GetLocalizedHtmlString("Return")
                </a>
            </div>
            <!-- /. tools -->
        </div>
        <div class="card-body">

            <div class="row">
                <div class="col-sm-3 ">
                    <div class="form-group">
                        <label>@SharedLocalizer.GetLocalizedHtmlString("Employee")</label>
                        <select id="EmpId" name="EmpId" class="form-control" disabled>

                            @foreach (var item in empList)
                            {
                                <option value="@item.EmpId" @(EmpDependentsDetails != null && EmpDependentsDetails.EmpId == item.EmpId ? "selected" : "")>
                                    @(item.FirstNameEn + " " + item.FatherNameEn + " " + item.GrandNameEn + " " + item.FamilyNameEn)
                                </option>
                            }
                        </select>
                    </div>
                </div>


                <div class="col-sm-3">
                    <div class="form-group">
                        <label>@SharedLocalizer.GetLocalizedHtmlString("Name")</label>
                        <input disabled type="text" id="DependentNameEn" name="DependentNameEn" class="form-control" value="@(EmpDependentsDetails!=null?EmpDependentsDetails.DependentNameEn: null)">
                    </div>
                </div>
                <div class="col-sm-3">
                    <div class="form-group">
                        <label>@SharedLocalizer.GetLocalizedHtmlString("Name Arabic")</label>
                        <input disabled type="text" id="DependentNameAr" name="DependentNameAr" class="form-control" value="@(EmpDependentsDetails!=null?EmpDependentsDetails.DependentNameAr: null)">
                    </div>
                </div>
                <div class="col-sm-3">
                    <div class="form-group">
                        <label>@SharedLocalizer.GetLocalizedHtmlString("DOB")</label>
                        <input disabled type="text" id="Dob" name="Dob" class="form-control DatePicker" value="@(EmpDependentsDetails != null && EmpDependentsDetails.Dob !=null ? Convert.ToDateTime(EmpDependentsDetails.Dob).ToString("dd-MMM-yyyy") : "")">
                    </div>
                </div>
                <div class="col-sm-3 ">
                    <div class="form-group">
                        <label> @SharedLocalizer.GetLocalizedHtmlString("Nationality")</label>
                        <select disabled id="NationalityId" name="NationalityId" class="form-control">

                            @foreach (var item in nationalityList)
                            {
                                <option value="@item.Code" @(EmpDependentsDetails != null && EmpDependentsDetails.NationalityId == item.Code ? "selected" : "")>
                                    @item.LookupNameEn
                                </option>
                            }
                        </select>
                    </div>
                </div>
                <div class="col-sm-3 ">
                    <div class="form-group">
                        <label> @SharedLocalizer.GetLocalizedHtmlString("Gender")</label>
                        <select id="GenderId" name="GenderId" class="form-control" disabled>

                            @foreach (var item in genderList)
                            {
                                <option value="@item.Code" @(EmpDependentsDetails != null && EmpDependentsDetails.GenderId == item.Code ? "selected" : "")>
                                    @item.LookupNameEn
                                </option>
                            }
                        </select>
                    </div>
                </div>
            </div>
        </div>

    </div>

    <div class="card card-default card-outline col-lg-12">

        <div class="card-header">
            <h2 class="card-title">
                @SharedLocalizer.GetLocalizedHtmlString("Id Details")
            </h2>
        </div>
        <div class="card-body">

            <div class="row">
                <div class="col-sm-3">
                    <div class="form-group">
                        <label>@SharedLocalizer.GetLocalizedHtmlString("Id No")</label>
                        <input disabled type="text" id="IdNo" name="IdNo" class="form-control" value="@(EmpDependentsDetails!=null?EmpDependentsDetails.IdNo: null)">
                    </div>
                </div>
                <div class="col-sm-3">
                    <div class="form-group">
                        <label>@SharedLocalizer.GetLocalizedHtmlString("Issued Date")</label>
                        <input disabled type="text" id="IdIssuedDate" name="IdIssuedDate" class="form-control DatePicker" value="@(EmpDependentsDetails != null && EmpDependentsDetails.IdIssuedDate !=null ? Convert.ToDateTime(EmpDependentsDetails.IdIssuedDate).ToString("dd-MMM-yyyy") : "")">
                    </div>
                </div>
                <div class="col-sm-3">
                    <div class="form-group">
                        <label>@SharedLocalizer.GetLocalizedHtmlString("Issued Date (Hijri)")</label>
                        <input disabled type="text" id="IdIssuedDateH" name="IdIssuedDateH" class="form-control DatePicker" value="@(EmpDependentsDetails != null && EmpDependentsDetails.IdIssuedDateH !=null ? Convert.ToDateTime(EmpDependentsDetails.IdIssuedDateH).ToString("dd-MMM-yyyy") : "")">
                    </div>
                </div>
                <div class="col-sm-3">
                    <div class="form-group">
                        <label>@SharedLocalizer.GetLocalizedHtmlString("End Date")</label>
                        <input disabled type="text" id="IdEndDate" name="IdEndDate" class="form-control DatePicker" value="@(EmpDependentsDetails != null && EmpDependentsDetails.IdEndDate !=null ? Convert.ToDateTime(EmpDependentsDetails.IdEndDate).ToString("dd-MMM-yyyy") : "")">
                    </div>
                </div>
                <div class="col-sm-3">
                    <div class="form-group">
                        <label>@SharedLocalizer.GetLocalizedHtmlString("End Date(Hijri)")</label>
                        <input disabled type="text" id="IdEndDateH" name="IdEndDateH" class="form-control DatePicker" value="@(EmpDependentsDetails != null && EmpDependentsDetails.IdEndDateH !=null ? Convert.ToDateTime(EmpDependentsDetails.IdEndDateH).ToString("dd-MMM-yyyy") : "")">
                    </div>
                </div>
                <div class="col-sm-3">
                    @*<div class="form-group">
                        <label>@SharedLocalizer.GetLocalizedHtmlString("Attachments")</label>
                        @if (EmpDependentsDetails != null && EmpDependentsDetails.IdAttachment != null)
                        {
