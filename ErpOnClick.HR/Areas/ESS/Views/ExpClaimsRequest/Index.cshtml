@using ErpOnClick.DAL.Models
@using ErpOnClick.ErpMain.Resources
@inject LocService SharedLocalizer

@{

}

@section TabName{
    Vacant jobs Setup
}


<div class="card card-default card-outline">


    <div class="card-header">
        <h2 class="card-title">
            @SharedLocalizer.GetLocalizedHtmlString("Expense Claims Requests")
        </h2>
        <!-- tools box -->
        <div class="card-tools">
            <a href="~/ESS/ExpClaimsRequest/edit" type="button" class="btn  btn-sm btn-primary">
                <i class="fas fa-plus"></i> @SharedLocalizer.GetLocalizedHtmlString("Add New Expense Claim Request")
            </a>
        </div>
        <!-- /. tools -->
    </div>



    <div class="card-body">
        <div id="divList"></div>

    </div>
</div>

@section scripts{
    <script>
        $(function () {
            BindGrid();
        });

        var applicationName = getApplicationName();
        function BindGrid() {

            var test = $('#frmSearch').serialize();

            $('#divList').html('<h5 class="margin-0"><p><i class="fa fa-spinner fa-spin fa-fw"></i> Please wait while data is loading...</p></h5>');
            $.ajax({
                url: applicationName + 'ESS/ExpClaimsRequest/_list',
                data: $('#frmList').serialize(),
                success: function (data) {
                    $('#divList').html(data);
                }
            })
        };

    </script>
}
