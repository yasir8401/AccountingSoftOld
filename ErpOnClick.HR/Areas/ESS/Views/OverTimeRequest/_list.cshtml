@using ErpOnClick.DAL.Models
@using ErpOnClick.ErpMain.Resources
@inject LocService SharedLocalizer

@{
    List<OvertimeRequests> OverTimeRequestList = Model.OverTimeRequestList;

}

<div class="table-responsive pb-2 ">
    <table id="dtList" class="table table-hover table-condensed " style="display:none">
        <thead class="text-sm">
            <tr>
                <th width="10px"> @SharedLocalizer.GetLocalizedHtmlString("Id") </th>
                <th> @SharedLocalizer.GetLocalizedHtmlString("Request No") </th>
                <th> @SharedLocalizer.GetLocalizedHtmlString("OverTime Date") </th>
                <th> @SharedLocalizer.GetLocalizedHtmlString("Approval Status") </th>
                <th> @SharedLocalizer.GetLocalizedHtmlString("Approval Date") </th>
                <th> @SharedLocalizer.GetLocalizedHtmlString("Note") </th>

                <th width="30px"></th>
              
            </tr>
        </thead>
        <tfoot style="display:table-row-group">
            <tr class="text-center">
                <th width="10px"> Id </th>
                <th> Request No </th>
                <th> OverTime Date </th>
                <th> Approval Status </th>
                <th> Approval Date </th>
                <th> Note </th>
                <th></th>

            </tr>
        </tfoot>
        <tbody>
            @foreach (var item in OverTimeRequestList)
            {

                <tr class="text-center">
                    <td> @item.OvertimeRequestId </td>
                    <td> @item.OvertimeRequestNo </td>
                    <td>@(item.OvertimeDate != null ? Convert.ToDateTime(item.OvertimeDate).ToString("dd-MMM-yyyy") : "")</td>
                    <td align="center">
                        @if (item.RequestStatusNavigation != null && item.RequestStatusNavigation.LookupNameEn == "Rejected")
                        {
                            <label class="btnwidth p-1 badge badge-danger mb-0">Rejected</label>

                        }
                        else if (item.RequestStatusNavigation != null && item.RequestStatusNavigation.LookupNameEn == "Approved")
                        {
                            <label class="btnwidth p-1 badge badge-success mb-0">Approved</label>
                        }
                        else if (item.RequestStatusNavigation != null && item.RequestStatusNavigation.LookupNameEn == "Pending")
                        {
                            <label class="btnwidth p-1 badge badge-warning mb-0">Pending</label>
                        }
                        else
                        {

                        }
                    </td>
                    <td>@(item.ApprovalDate != null ? Convert.ToDateTime(item.ApprovalDate).ToString("dd-MMM-yyyy") : "")</td>
                    <td align="left"> @item.Note </td>


                    <td class="text-center padding-5">
                        <a href="~/ESS/OverTimeRequest/edit/@item.OvertimeRequestId" class="btn btn-default btn-block  btn-xs "><i class="fa fa-edit"></i></a>
                    </td>
                    
                </tr>
            }
        </tbody>
    </table>
</div>


<script>
    $(function () {
        _initDatatable('#dtList');
        $('#dtList').show();
    });
    var applicationName = getApplicationName();

    function deleteItem(id) {
        confirmAction('Confirm ?', 'Are you sure you want to save changes ?', 'info', 'Yes', 'No').then(function (result) {
            if (result.value == true) {

                $.ajax({
                    url: applicationName + "ESS/OverTimeRequest/delete",
                    async: false,
                    type: "POST",
                    data: { id },
                    success: function (data) {
                        if (data.result.isError != true) {
                            showMsg('Deleted !', 'Record has been deleted !', 'success');
                            setTimeout(function () {
                                window.location = applicationName + 'ESS/OverTimeRequest';
                            }, 500);
                        }
                        else if (data.result.msg != '') {
                            showMsg('Delete Failed !', data.result.msg, 'error');
                        }
                        else {
                            showMsg('Delete Failed !', 'Something went wrong. Try again', 'error');
                        }
                    }
                });
            }
        });
    }

</script>