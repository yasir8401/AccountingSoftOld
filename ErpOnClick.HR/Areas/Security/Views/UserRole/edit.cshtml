@using ErpOnClick.ErpMain.Resources
@inject LocService SharedLocalizer
@using ErpOnClick.DAL.Models
@{


    IList<Branch> branchList = Model.branchList;
    IList<Company> companyList = Model.companyList;
    IList<Users> userList = Model.userList;
    IList<Roles> roleList = Model.roleList;

    var userId = Model.userId;
    Users userDetails = Model.userDetails;


    UserRoles UserRoleDetails = Model.UserRolesDetails;
    bool isEdit = (UserRoleDetails != null);
}





<form id="frmEdit" role="form" enctype="multipart/form-data">
    <input type="hidden" id="ACTION_TYPE" name="ACTION_TYPE" value="@(isEdit ? "update" : "save")" />
    <input type="hidden" id="UserRoleId" name="UserRoleId" class="form-control" value="@(UserRoleDetails != null ? UserRoleDetails.UserRoleId : 0)" @(isEdit ? "readonly" : "") min="3" maxlength="3">

    <div class="card card-default card-outline col-lg-8">
        <div class="card-header p-0 border-bottom-0">
            <ul class="nav nav-tabs" id="custom-content-below-tab" role="tablist">
                <li class="nav-item">
                    <a class="nav-link" onclick="navigation()" href="javascript:void(0)">@SharedLocalizer.GetLocalizedHtmlString("user")</a>
                </li>


                <li class="nav-item">
                    <a class="nav-link" id="tabUserPrivileges-tab" data-toggle="pill" onclick="navigationTwo()" href="javascript:void(0)">@SharedLocalizer.GetLocalizedHtmlString("User Privilage")</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" id="tabUserRole-tab" data-toggle="pill" onclick="navigationThree()" href="javascript:void(0)">@SharedLocalizer.GetLocalizedHtmlString("User Roles")</a>
                </li>

            </ul>
        </div>
        <div class="card-header">
            <h2 class="card-title">
                @SharedLocalizer.GetLocalizedHtmlString("Details")
            </h2>
            <!-- tools box -->
            <div class="card-tools">
                <button type="submit" class="btn  btn-sm btn-primary">
                    <i class="fas fa-save fa-fw"></i> @SharedLocalizer.GetLocalizedHtmlString("Save")
                </button>
                <a href="~/Security/userrole/user/@userId" type="button" class="btn  btn-sm btn-default">
                    <i class="fas fa-arrow-left fa-fw"></i> @SharedLocalizer.GetLocalizedHtmlString("Return")
                </a>
            </div>
            <!-- /. tools -->
        </div>
        <div class="card-body">

            <div class="row">
                <div class="col-sm-6">
                    <div class="form-group">
                        <label>@SharedLocalizer.GetLocalizedHtmlString("Users")</label>
                        <select id="UserId" name="UserId" class="form-control" required>

                            @foreach (var item in userList)
                            {
                                <option value="@item.UserId" @(UserRoleDetails != null && UserRoleDetails.UserId == item.UserId ? "selected" : "")>
                                    @item.DisplayNameEn
                                </option>
                            }
                        </select>
                    </div>
                </div>
                <div class="col-sm-6">
                    <div class="form-group">
                        <label>@SharedLocalizer.GetLocalizedHtmlString("Roles")</label>
                        <select id="RoleId" name="RoleId" class="form-control" required>

                            @foreach (var item in roleList)
                            {
                                <option value="@item.RoleId" @(UserRoleDetails != null && UserRoleDetails.RoleId == item.RoleId ? "selected" : "")>
                                    @item.RoleNameEn
                                </option>
                            }
                        </select>
                    </div>
                </div>

            </div>


        </div>

    </div>

    <div class="card card-default card-outline col-lg-8">
        <div class="card-header">
            <h2 class="card-title">
                @SharedLocalizer.GetLocalizedHtmlString("More Details")
            </h2>
        </div>
        <div class="card-body">
            <div class="row">


                <div class="col-sm-6 ">
                    <div class="form-group">
                        <label>@SharedLocalizer.GetLocalizedHtmlString("Company")</label>
                        <select id="CompanyId" name="CompanyId" class="form-control" required>
                            <option></option>
                            @foreach (var item in companyList)
                            {
                                <option value="@item.CompanyId" @(UserRoleDetails != null && UserRoleDetails.CompanyId == item.CompanyId ? "selected" : "")>
                                    @item.CoNameEn
                                </option>
                            }
                        </select>
                    </div>
                </div>
                <div class="col-sm-6 ">
                    <div class="form-group">
                        <label>@SharedLocalizer.GetLocalizedHtmlString("Branch")</label>
                        <select id="BranchId" name="BranchId" class="form-control" required>
                            @if (isEdit)
                            {
                                @foreach (var item in branchList)
                                {
                                    <option value="@item.BranchId" @(UserRoleDetails != null && UserRoleDetails.BranchId == item.BranchId ? "selected" : "")>
                                        @item.BranchNameEn
                                    </option>
                                }
                            }
                        </select>
                    </div>
                </div>
                <div class="col-sm-6">
                    <div class="form-group">
                        <label>@SharedLocalizer.GetLocalizedHtmlString("Is-Active")</label>
                        <select id="IsActive" name="IsActive" class="form-control" required>
                            @*<option></option>*@
                            <option value="True" @(UserRoleDetails != null && UserRoleDetails.IsActive == true ? "selected" : "")>Active</option>
                            <option value="False" @(UserRoleDetails != null && UserRoleDetails.IsActive == false ? "selected" : "")>Inactive</option>
                        </select>
                    </div>
                </div>
            </div>
        </div>
    </div>

</form>






@section scripts{

    <script>

        $(function () {
            $('#ApplicationSummary').summernote(
                {
                    height: 200,

                }
            );
        });


        $('#frmEdit').on('submit', function (e) {
            e.preventDefault();
            var actionType = $('#ACTION_TYPE').val();

            confirmAction('Confirm ?', 'Are you sure you want to save changes ?', 'info', 'Yes', 'No').then(function (result) {
                if (result.value == true) {

                    var params = $('#frmEdit').serialize();
                    $.ajax({
                        url: getApplicationName()+"Security/UserRole/" + actionType,
                        async: false,
                        type: "POST",
                        data: params,
                        success: function (data) {
                            if (data.result.isError != true) {
                                showMsg('Saved !', 'Record has been saved !', 'success');
                                setTimeout(function () {
                                    window.location = getApplicationName() +'Security/UserRole/user/@userId';
                                }, 500);
                            }
                            else if (data.result.msg != '') {
                                showMsg('Save Failed !', data.result.msg, 'error');
                            }
                            else {
                                showMsg('Save Failed !', 'Something went wrong. Try again', 'error');
                            }
                        }
                    });
                }
            });




        });

        $('#CompanyId').change(function () {

            var id = $('#CompanyId').val();

            $.ajax({
                url: getApplicationName()+"Ajax/BranchCascading",
                async: false,
                type: "POST",
                data: { id: id },
                success: function (data) {

                    var item = '';

                    $.each(data.result, function (i, product) {

                        item += "<option value='" + product.branchId + "'>" + product.branchNameEn + "</option>";
                    });

                    $("#BranchId").html(item);

                }
            });

        });
           function navigation() {

             window.location = getApplicationName() + 'Security/User/edit/@userId';
    };
          function navigationTwo() {

              window.location = getApplicationName() + 'Security/userprivileges/user/@userDetails.UserId';
            };
         function navigationThree() {

              window.location = getApplicationName() + 'Security/userrole/user/@userDetails.UserId';
            };
    </script>

}