@using ErpOnClick.DAL.Models
@using ErpOnClick.ErpMain.Resources
@inject LocService SharedLocalizer

@{
    List<AppConfig> AppConfigServList = Model.AppConfigServList;

}


<div class="table-responsive pb-2 ">
    <table id="dtList" class="table table-hover table-condensed ">
        <thead class="text-sm">
            <tr>
                <th style="width:25px">@SharedLocalizer.GetLocalizedHtmlString("Id")</th>
                <th>@SharedLocalizer.GetLocalizedHtmlString("Name") </th>
                <th>@SharedLocalizer.GetLocalizedHtmlString("Config Val")</th>
                <th>@SharedLocalizer.GetLocalizedHtmlString("Description")</th>
                <th style="width:30px">@SharedLocalizer.GetLocalizedHtmlString("Status")</th>
                <th style="width:15px"></th>
                <th style="width: 15px"></th>

            </tr>
        </thead>
        <tfoot style="display:table-row-group">
            <tr class="text-center">
                <th>Id</th>
                <th>Name </th>
                <th>Config Val</th>
                <th>Description</th>
                <th>Status</th>
                <td></td>
                <td></td>

            </tr>
        </tfoot>
        <tbody>
            @foreach (var item in AppConfigServList)
            {

                <tr class="text-center">
                    <td>@item.ConfigId</td>
                    <td class="text-left">@item.ConfigName</td>
                    <td class="text-left">@item.ConfigVal</td>
                    <td class="text-left">@item.Description</td>
                    <td><i class="@(item.IsActive==true?"fa fa-check":"fa fa-times")"></i></td>
                    <td class="text-center padding-5">
                        <a href="~/Security/AppConfig/edit/@item.ConfigId" class="btn btn-default btn-block  btn-xs "><i class="fa fa-edit"></i></a>
                    </td>
                    <td class="text-center padding-5">
                        <a href="javascript:void(0)" class="btn btn-default btn-block btn-xs " onclick="deleteItem('@item.ConfigId')"><i class="fa fa-times text-danger"></i></a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>


<script>
    $(function () {
        _initDatatable('#dtList');
    });

    function deleteItem(id) {
        confirmAction('Confirm ?', 'Are you sure you want to save changes ?', 'info', 'Yes', 'No').then(function (result) {
            if (result.value == true) {

                $.ajax({
                    url: getApplicationName() + "Security/AppConfig/delete",
                    async: false,
                    type: "POST",
                    data: { id },
                    success: function (data) {
                        if (data.result.isError != true) {
                            showMsg('Deleted !', 'Record has been deleted !', 'success');
                            setTimeout(function () {
                                window.location = getApplicationName() + 'Security/AppConfig';
                            }, 500);
                        }
                        else if (data.result.msg != '') {
                            showMsg('Delete Failed !', data.result.msg, 'error');
                        }
                        else {
                            showMsg('Delete Failed !', 'Something went wrong. Try again', 'error');
                        }
                    }
                });
            }
        });
    }

</script>