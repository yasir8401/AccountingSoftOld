@using ErpOnClick.DAL.Models
@using ErpOnClick.ErpMain.Resources
@inject LocService SharedLocalizer

@{


    IList<Branch> branchList = Model.branchList;
    IList<Company> companyList = Model.companyList;

    Roles RoleDetails = Model.RoleDetails;
    bool isEdit = (RoleDetails != null);
}



<form id="frmEdit" role="form" enctype="multipart/form-data">
    <input type="hidden" id="ACTION_TYPE" name="ACTION_TYPE" value="@(isEdit ? "update" : "save")" />
    <input type="hidden" id="RoleId" name="RoleId" class="form-control" value="@(RoleDetails != null ? RoleDetails.RoleId : 0)" @(isEdit ? "readonly" : "") min="3" maxlength="3">

    <div class="card card-primary card-outline card-outline-tabs">
        <div class="card-header p-0 border-bottom-0">
            <ul class="nav nav-tabs" id="custom-content-below-tab" role="tablist">
                <li class="nav-item">
                    <a class="nav-link active" id="tabMain-tab" data-toggle="pill" href="#tabMain" role="tab" aria-controls="tabMain" aria-selected="true">@SharedLocalizer.GetLocalizedHtmlString("Roles")</a>
                </li>

                @if (isEdit)
                {
                    <li class="nav-item">
                        <a class="nav-link" id="tabRolePrivileges-tab" data-toggle="pill" onclick="navigation()" href="javascript:void(0)">@SharedLocalizer.GetLocalizedHtmlString("Role Privilage")</a>
                    </li>

                }
            </ul>
        </div>



        <div class="card-body bg-gray-light">

            <div class="tab-content" id="custom-content-below-tabContent">
                <div class="tab-pane fade active show" id="tabMain" role="tabpanel" aria-labelledby="tabMain-tab">
                    <div>
                        <div class="card card-default card-outline col-lg-8">

                            <div class="card-header">
                                <h2 class="card-title mt-3">
                                    @SharedLocalizer.GetLocalizedHtmlString("Details")
                                </h2>
                                <!-- tools box -->
                                <div class="card-tools pr-0">
                                    <button type="submit" class="btn  btn-sm btn-primary">
                                        <i class="fas fa-save fa-fw"></i> @SharedLocalizer.GetLocalizedHtmlString("Save")
                                    </button>
                                    <a href="~/Security/role" type="button" class="btn  btn-sm btn-default">
                                        <i class="fas fa-arrow-left fa-fw"></i> @SharedLocalizer.GetLocalizedHtmlString("Return")
                                    </a>
                                </div>
                                <!-- /. tools -->
                            </div>
                            <div class="card-body">

                                <div class="row">
                                    <div class="col-sm-6">
                                        <div class="form-group">
                                            <label>@SharedLocalizer.GetLocalizedHtmlString("Name")</label>
                                            <input type="text" id="RoleNameEn" name="RoleNameEn" class="form-control" value="@(RoleDetails!=null?RoleDetails.RoleNameEn: null)" required>
                                        </div>
                                    </div>
                                    <div class="col-sm-6">
                                        <div class="form-group">
                                            <label> @SharedLocalizer.GetLocalizedHtmlString("Name Arabic")</label>
                                            <input type="text" id="RoleNameAr" name="RoleNameAr" class="form-control" value="@(RoleDetails!=null?RoleDetails.RoleNameAr: null)">
                                        </div>
                                    </div>
                                    <div class="col-sm-6">
                                        <div class="form-group">
                                            <label>@SharedLocalizer.GetLocalizedHtmlString("Role Code")</label>
                                            <input type="text" id="RoleCode" name="RoleCode" class="form-control" value="@(RoleDetails!=null?RoleDetails.RoleCode: null)" required>
                                        </div>
                                    </div>



                                </div>

                            </div>






                        </div>
                        <div class="card card-default card-outline col-lg-8">
                            <div class="card-header">
                                <h2 class="card-title">
                                    @SharedLocalizer.GetLocalizedHtmlString("More Details")
                                </h2>
                            </div>
                            <div class="card-body">
                                <div class="row">


                                    <div class="col-sm-6 ">
                                        <div class="form-group">
                                            <label>@SharedLocalizer.GetLocalizedHtmlString("Company")</label>
                                            <select id="CompanyId" name="CompanyId" class="form-control" required>
                                                <option></option>
                                                @foreach (var item in companyList)
                                                {
                                                    <option value="@item.CompanyId" @(RoleDetails != null && RoleDetails.CompanyId == item.CompanyId ? "selected" : "")>
                                                        @item.CoNameEn
                                                    </option>
                                                }
                                            </select>
                                        </div>
                                    </div>
                                    <div class="col-sm-6 ">
                                        <div class="form-group">
                                            <label>@SharedLocalizer.GetLocalizedHtmlString("Branch")</label>
                                            <select id="BranchId" name="BranchId" class="form-control" required>
                                                @if (isEdit)
                                                {
                                                    @foreach (var item in branchList)
                                                    {
                                                        <option value="@item.BranchId" @(RoleDetails != null && RoleDetails.BranchId == item.BranchId ? "selected" : "")>
                                                            @item.BranchNameEn
                                                        </option>
                                                    }
                                                }
                                            </select>
                                        </div>
                                    </div>
                                    <div class="col-sm-6">
                                        <div class="form-group">
                                            <label>@SharedLocalizer.GetLocalizedHtmlString("Is-Active")</label>
                                            <select id="IsActive" name="IsActive" class="form-control" required>
                                                @*<option></option>*@
                                                <option value="True" @(RoleDetails != null && RoleDetails.IsActive == true ? "selected" : "")>Active</option>
                                                <option value="False" @(RoleDetails != null && RoleDetails.IsActive == false ? "selected" : "")>Inactive</option>
                                            </select>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="card card-outline card-outline col-lg-8">
                            <div class="card-header">
                                <h3 class="card-title">
                                    @SharedLocalizer.GetLocalizedHtmlString("Description")
                                </h3>

                            </div>
                            <!-- /.card-header -->
                            <div class="card-body pad">
                                <div class="mb-3">
                                    <textarea id="RoleDescriptionEn" required rows="8" name="RoleDescriptionEn"
                                              style="width: 100%; height: 200px; font-size: 14px; line-height: 18px; border: 1px solid #dddddd; padding: 10px;">@(RoleDetails != null? RoleDetails.RoleDescriptionEn : "")</textarea>
                                </div>

                            </div>
                        </div>
                        <div class="card card-outline card-outline col-lg-8">
                            <div class="card-header">
                                <h3 class="card-title">
                                    @SharedLocalizer.GetLocalizedHtmlString("Description Arabic")
                                </h3>

                            </div>
                            <!-- /.card-header -->
                            <div class="card-body pad">
                                <div class="mb-3">
                                    <textarea id="RoleDescriptionAr" rows="8" required name="RoleDescriptionAr"
                                              style="width: 100%; height: 200px; font-size: 14px; line-height: 18px; border: 1px solid #dddddd; padding: 10px;">@(RoleDetails != null? RoleDetails.RoleDescriptionAr : "")</textarea>
                                </div>

                            </div>
                        </div>
                    </div>
                </div>


            </div>

        </div>
    </div>



</form>




@section scripts{

    <script>

        $(function () {

        });


        $('#frmEdit').on('submit', function (e) {
            e.preventDefault();
            var actionType = $('#ACTION_TYPE').val();

            confirmAction('Confirm ?', 'Are you sure you want to save changes ?', 'info', 'Yes', 'No').then(function (result) {
                if (result.value == true) {

                    var params = $('#frmEdit').serialize();
                    $.ajax({
                        url: getApplicationName()+"Security/Role/" + actionType,
                        async: false,
                        type: "POST",
                        data: params,
                        success: function (data) {
                            if (data.result.isError != true) {
                                var id = data.result.scalerVal;
                                showMsg('Saved !', 'Record has been saved !', 'success');
                                setTimeout(function () {
                                    window.location = getApplicationName() +`Security/Role/edit/${id}`;
                                }, 500);
                            }
                            else if (data.result.msg != '') {
                                showMsg('Save Failed !', data.result.msg, 'error');
                            }
                            else {
                                showMsg('Save Failed !', 'Something went wrong. Try again', 'error');
                            }
                        }
                    });
                }
            });




        });

        $('#CompanyId').change(function () {

            var id = $('#CompanyId').val();

            $.ajax({
                url: getApplicationName()+"Ajax/BranchCascading",
                async: false,
                type: "POST",
                data: { id: id },
                success: function (data) {

                    var item = '';

                    $.each(data.result, function (i, product) {

                        item += "<option value='" + product.branchId + "'>" + product.branchNameEn + "</option>";
                    });

                    $("#BranchId").html(item);

                }
            });

        });

         function navigation() {

             window.location = getApplicationName() + 'admin/roleprivileges/role/@(RoleDetails != null ? RoleDetails.RoleId : 0)';
    };

    </script>

}