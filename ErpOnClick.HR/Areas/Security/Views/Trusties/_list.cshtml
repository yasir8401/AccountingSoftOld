@using ErpOnClick.DAL.Models
@{
    List<Trusties> TrustiesList = Model.TrustiesList;
}
<div class="table-responsive pb-2 ">
    <table id="dtList" class="table table-hover table-condensed ">
        <thead class="text-sm">
            <tr class="col-lg-12">
                <th width="10px" > Id </th>
                <th> Name </th>
                <th> Description </th>
                
                <th style="width:25px">Edit</th>
                <th style="width:25px">Delete</th>
            </tr>
        </thead>
        <tfoot style="display:table-row-group">
            <tr class="text-center">
                <th> Id </th>
                <th> Name </th>
                <th> Description </th>
                
                <td></td>
                <td></td>

            </tr>
        </tfoot>
        <tbody>
            @foreach (var item in TrustiesList)
            {

            <tr class="text-center">
                <td align="left"> @item.TrustId </td>
                <td align="left"> @item.TrustName </td>
                <td align="left"> @item.Description </td>
                


                <td class="text-center padding-5">
                    <a href="~/Security/Trusties/edit/@item.TrustId" class="btn btn-default btn-block  btn-xs "><i class="fa fa-edit"></i></a>
                </td>
                <td class="text-center padding-5">
                    <a href="javascript:void(0)" class="btn btn-default btn-block btn-xs " onclick="deleteItem('@item.TrustId')"><i class="fa fa-times text-danger"></i></a>
                </td>
            </tr>
            }
        </tbody>
    </table>
</div>

<script>
    $(function () {
        _initDatatable('#dtList');
    });
    
    function deleteItem(id) {
        confirmAction('Confirm ?', 'Are you sure you want to save changes ?', 'info', 'Yes', 'No').then(function (result) {
            if (result.value == true) {
                    $.ajax({
                        url: getApplicationName() +"Security/Trusties/delete",
                    async: false,
                    type: "POST",
                    data: { id },
                    success: function (data) {
                        if (data.result.isError != true) {
                            showMsg('Deleted !', 'Record has been deleted !', 'success');
                            setTimeout(function () {
                                window.location = getApplicationName() +'Security/Trusties';
                            }, 500);
                        }
                        else if (data.result.msg != '') {
                            showMsg('Delete Failed !', data.result.msg, 'error');
                        }
                        else {
                            showMsg('Delete Failed !', 'Something went wrong. Try again', 'error');
                        }
                    }
                });
            }
        });
    }
</script>