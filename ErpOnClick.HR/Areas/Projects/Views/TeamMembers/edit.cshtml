@using ErpOnClick.DAL.Models

@using ErpOnClick.ErpMain.Resources
@inject LocService SharedLocalizer
@{


    IList<Branch> branchList = Model.branchList;
    IList<Company> companyList = Model.companyList;

    IList<Emp> empList = Model.empList;
    IList<TeamMembers> parentTeamMemberList = Model.parentTeamMemberList;
    IList<Projects> projectList = Model.projectList;
    IList<Tasks> taskList = Model.taskList;
    IList<Lookups> TeamMemberStatusList = Model.TeamMemberStatusList;

    TeamMembers TeamMemberDetails = Model.TeamMemberDetails;
    bool isEdit = (TeamMemberDetails != null);
}



<form id="frmEdit" role="form">
    <input type="hidden" id="ACTION_TYPE" name="ACTION_TYPE" value="@(isEdit ? "update" : "save")" />
    <input type="hidden" id="TeamMemberId" name="TeamMemberId" class="form-control" value="@(TeamMemberDetails != null ? TeamMemberDetails.TeamMemberId : 0)" @(isEdit ? "readonly" : "") min="3" maxlength="3">
    <input type="hidden" id="CompanyId" name="CompanyId" class="form-control" value="@(TeamMemberDetails != null ? TeamMemberDetails.CompanyId : 0)" >
    <input type="hidden" id="BranchId" name="BranchId" class="form-control" value="@(TeamMemberDetails != null ? TeamMemberDetails.BranchId : 0)" >

    <div class="card card-default card-outline col-lg-8">

        <div class="card-header">
            <h2 class="card-title">
                @SharedLocalizer.GetLocalizedHtmlString("Team Details") 
            </h2>
            <!-- tools box -->
            <div class="card-tools">
                <button type="submit" class="btn  btn-sm btn-primary">
                    <i class="fas fa-save fa-fw"></i>  @SharedLocalizer.GetLocalizedHtmlString("Save")  
                </button>
                <a href="~/Projects/TeamMembers" type="button" class="btn  btn-sm btn-default">
                    <i class="fas fa-arrow-left fa-fw"></i> @SharedLocalizer.GetLocalizedHtmlString("Return") 
                </a>
            </div>
            <!-- /. tools -->
        </div>
        <div class="card-body">

            <div class="row">
                <div class="col-sm-4">
                    <div class="form-group">
                        <label>@SharedLocalizer.GetLocalizedHtmlString("Employee") </label>
                        <select id="EmpId" name="EmpId" class="form-control" required>
                            <option></option>
                            @foreach (var item in empList)
                            {
                                <option value="@item.EmpId" @(TeamMemberDetails != null && TeamMemberDetails.EmpId == item.EmpId ? "selected" : "")>
                                    @(item.FirstNameEn + " " + item.FatherNameEn + " " + item.GrandNameEn + " " + item.FamilyNameEn)
                                </option>
                            }
                        </select>
                    </div>
                </div>
                <div class="col-sm-4">
                    <div class="form-group">
                        <label>@SharedLocalizer.GetLocalizedHtmlString("Projects")  </label>
                        <select id="ProjectId" name="ProjectId" class="form-control" required>
                            <option></option>
                            @foreach (var item in projectList)
                            {
                                <option value="@item.ProjectId" @(TeamMemberDetails != null && TeamMemberDetails.ProjectId == item.ProjectId ? "selected" : "")>
                                    @item.ProjectTitle
                                </option>
                            }
                        </select>
                    </div>
                </div>
                <div class="col-sm-4">
                    <div class="form-group">
                        <label>@SharedLocalizer.GetLocalizedHtmlString("Task") </label>
                        <select id="TaskId" name="TaskId" class="form-control" required>
                            <option></option>
                            @foreach (var item in taskList)
                            {
                                <option value="@item.TaskId" @(TeamMemberDetails != null && TeamMemberDetails.TaskId == item.TaskId ? "selected" : "")>
                                    @item.TaskTitle
                                </option>
                            }
                        </select>
                    </div>
                </div>
                <div class="col-md-12"><hr /></div>
                <div class="col-sm-6">
                    <div class="form-group">
                        <label>@SharedLocalizer.GetLocalizedHtmlString("Status") </label>
                        <select id="StatusId" name="StatusId" class="form-control" required>

                            @foreach (var item in TeamMemberStatusList)
                            {
                                <option value="@item.Code" @(TeamMemberDetails != null && TeamMemberDetails.StatusId == item.Code ? "selected" : "")>
                                    @item.LookupNameEn
                                </option>
                            }
                        </select>
                    </div>
                </div>
                <div class="col-sm-6">
                    <div class="form-group">
                        <label>@SharedLocalizer.GetLocalizedHtmlString("Progress (%)")</label>
                        <input type="number" id="ProgressPercent" name="ProgressPercent" class="form-control" value="@(TeamMemberDetails!=null?TeamMemberDetails.ProgressPercent: null)">
                    </div>
                </div>

                <div class="col-sm-6">
                    <div class="form-group">
                        <label>@SharedLocalizer.GetLocalizedHtmlString("Start Date")</label>
                        <input type="text" id="StartDate" name="StartDate" class="form-control DatePicker" value="@(TeamMemberDetails != null && TeamMemberDetails.StartDate !=null ? Convert.ToDateTime(TeamMemberDetails.StartDate).ToString("dd-MMM-yyyy") : "")">

                    </div>
                </div>
                <div class="col-sm-6">
                    <div class="form-group">
                        <label>@SharedLocalizer.GetLocalizedHtmlString("End Date")</label>
                        <input type="text" id="EndDate" name="EndDate" class="form-control DatePicker" value="@(TeamMemberDetails != null && TeamMemberDetails.EndDate !=null ? Convert.ToDateTime(TeamMemberDetails.EndDate).ToString("dd-MMM-yyyy") : "")">

                    </div>
                </div>
                <div class="col-md-12"><hr /></div>


                <div class="col-md-12 card-header">
                    <label>@SharedLocalizer.GetLocalizedHtmlString("Comments")</label>
                    <textarea @(TeamMemberDetails != null && TeamMemberDetails.Comments != null ? "disabled" : "") required id="Reason" rows="4" name="Comments"
                              style="width: 100%; height: 80px; font-size: 14px; line-height: 18px; border: 1px solid #dddddd; padding: 10px;">@(TeamMemberDetails != null? TeamMemberDetails.Comments : "")</textarea>
                </div>



            </div>
        </div>

    </div>

    <div class="card card-default card-outline col-lg-8" style="display:none">
        <div class="card-header">
            <h2 class="card-title">
                @SharedLocalizer.GetLocalizedHtmlString("Organisation Details")  
            </h2>
        </div>
        <div class="card-body">
            <div class="row">
                <div class="col-sm-6 ">
                    <div class="form-group">
                        <label>   @SharedLocalizer.GetLocalizedHtmlString("Company")</label>
                        <select id="CompanyId" name="CompanyId" class="form-control">
                            <option selected></option>
                            @foreach (var item in companyList)
                            {
                                <option value="@item.CompanyId" @(TeamMemberDetails != null && TeamMemberDetails.CompanyId == item.CompanyId ? "selected" : "")>
                                    @item.CoNameEn
                                </option>
                            }
                        </select>
                    </div>
                </div>
                <div class="col-sm-6 ">
                    <div class="form-group">
                        <label>@SharedLocalizer.GetLocalizedHtmlString("Branch")</label>
                        <select id="BranchId" name="BranchId" class="form-control">
                            <option selected></option>
                            @foreach (var item in branchList)
                            {
                                <option value="@item.BranchId" @(TeamMemberDetails != null && TeamMemberDetails.BranchId == item.BranchId ? "selected" : "")>
                                    @item.BranchNameEn
                                </option>
                            }
                        </select>
                    </div>
                </div>

            </div>
        </div>
    </div>
</form>





@section scripts{

    <script>

        $(function () {


        });

        $('#CompanyId').change(function () {

            var id = $('#CompanyId').val();

            $.ajax({
                url: getApplicationName() + "Ajax/BranchCascading",
                async: false,
                type: "POST",
                data: { id: id },
                success: function (data) {

                    var item = '';

                    $.each(data.result, function (i, product) {

                        item += "<option value='" + product.branchId + "'>" + product.branchNameEn + "</option>";
                    });

                    $("#BranchId").html(item);

                }
            });

        });
        $('#frmEdit').on('submit', function (e) {
            e.preventDefault();
            var actionType = $('#ACTION_TYPE').val();

            confirmAction('Confirm ?', 'Are you sure you want to save changes ?', 'info', 'Yes', 'No').then(function (result) {
                if (result.value == true) {

                    var params = $('#frmEdit').serialize();
                    $.ajax({
                        url: getApplicationName() + "Projects/TeamMembers/" + actionType,
                        async: false,
                        type: "POST",
                        data: params,
                        success: function (data) {
                            if (data.result.isError != true) {
                                showMsg('Saved !', 'Record has been saved !', 'success');
                                setTimeout(function () {
                                    window.location = getApplicationName() + 'Projects/TeamMembers';
                                }, 500);
                            }
                            else if (data.result.msg != '') {
                                showMsg('Save Failed !', data.result.msg, 'error');
                            }
                            else {
                                showMsg('Save Failed !', 'Something went wrong. Try again', 'error');
                            }
                        }
                    });
                }
            });




        });

    </script>

}