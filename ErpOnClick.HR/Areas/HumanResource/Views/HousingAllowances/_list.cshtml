@using ErpOnClick.DAL.Models
@using ErpOnClick.ErpMain.Resources
@inject LocService SharedLocalizer

@{
    List<HousingAllowances> HousingAllowanceList = Model.HousingAllowanceList;

}

<div class="table-responsive pb-2 ">
    <table id="dtList" class="table table-hover table-condensed " style="display:none">
        <thead class="text-sm">
            <tr>
                <th> @SharedLocalizer.GetLocalizedHtmlString("Name") </th>
                <th> @SharedLocalizer.GetLocalizedHtmlString("Code") </th>
                <th> @SharedLocalizer.GetLocalizedHtmlString("Housing Payment")</th>
                <th> @SharedLocalizer.GetLocalizedHtmlString("Allowance Rate") </th>
                <th> @SharedLocalizer.GetLocalizedHtmlString("IsFixed Amount") </th>
                <th> @SharedLocalizer.GetLocalizedHtmlString("Fixed Amount") </th>
                <th> @SharedLocalizer.GetLocalizedHtmlString("Distribute With Salary") </th>

                <th width="30px"></th>
                <th width="30px"></th>
            </tr>
        </thead>
        <tfoot style="display:table-row-group">
            <tr class="text-center">
                <th> Name </th>
                <th> Code </th>
                <th> Housing Payment</th>
                <th> Allowance Rate </th>
                <th> IsFixed Amount </th>
                <th> Fixed Amount </th>
                <th> Distribute With Salary </th>

                <th></th>
                <th></th>

            </tr>
        </tfoot>
        <tbody>
            @foreach (var item in HousingAllowanceList)
            {

                <tr class="text-center">
                    <td> @item.HousingAllowanceNameEn </td>
                    <td> @item.HousingAllowanceCode </td>
                    <td> @item.HousingPaymentTypeId </td>
                    <td> @item.AllowanceRate </td>
                    <td><i class="@(item.IsFixedAmount==true?"fa fa-check":"")"></i></td>

                    <td> @item.FixedAmount </td>
                    <td><i class="@(item.DistributeWithSalary==true?"fa fa-check":"")"></i></td>
                    <td class="text-center padding-5">
                        <a href="~/HumanResource/HousingAllowances/edit/@item.HousingAllowanceId" class="btn btn-default btn-block  btn-xs "><i class="fa fa-edit"></i></a>
                    </td>
                    <td class="text-center padding-5">
                        <a href="javascript:void(0)" class="btn btn-default btn-block btn-xs " onclick="deleteItem('@item.HousingAllowanceId')"><i class="fa fa-times text-danger"></i></a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>


<script>
    $(function () {

        _initDatatable('#dtList');
        $('#dtList').show();
    });
    var applicationName = getApplicationName();

    function deleteItem(id) {
        confirmAction('Confirm ?', 'Are you sure you want to save changes ?', 'info', 'Yes', 'No').then(function (result) {
            if (result.value == true) {

                $.ajax({
                    url: applicationName + "HumanResource/HousingAllowances/delete",
                    async: false,
                    type: "POST",
                    data: { id },
                    success: function (data) {
                        if (data.result.isError != true) {
                            showMsg('Deleted !', 'Record has been deleted !', 'success');
                            setTimeout(function () {
                                window.location = applicationName + 'HumanResource/HousingAllowances';
                            }, 500);
                        }
                        else if (data.result.msg != '') {
                            showMsg('Delete Failed !', data.result.msg, 'error');
                        }
                        else {
                            showMsg('Delete Failed !', 'Something went wrong. Try again', 'error');
                        }
                    }
                });
            }
        });
    }

</script>