@using ErpOnClick.ErpMain.Resources
@inject LocService SharedLocalizer

@using ErpOnClick.DAL.Models
@{
    List<Divisions> DivisionList = Model.DivisionList;

}

<div class="table-responsive pb-2 ">
    <table id="dtList" class="table table-hover table-condensed " style="display:none">
        <thead class="text-sm">
            <tr>
                <th> @SharedLocalizer.GetLocalizedHtmlString("Id")</th>
                <th> @SharedLocalizer.GetLocalizedHtmlString("Name")</th>
                <th> @SharedLocalizer.GetLocalizedHtmlString("Code")</th>
                <th> @SharedLocalizer.GetLocalizedHtmlString("Head")</th>
                <th> @SharedLocalizer.GetLocalizedHtmlString("Reporting To")</th>
                <th> @SharedLocalizer.GetLocalizedHtmlString("Branch")</th>
                <th> @SharedLocalizer.GetLocalizedHtmlString("Company")</th>

                <th width="30px"></th>
                <th width="30px"></th>
            </tr>
        </thead>
        <tfoot style="display:table-row-group">
            <tr class="text-center">
                <th> Id</th>
                <th> Name</th>
                <th> Code</th>
                <th> Head</th>
                <th> Reporting To</th>
                <th> Branch</th>
                <th> Company</th>

                <th></th>
                <th></th>

            </tr>
        </tfoot>
        <tbody>
            @foreach (var item in DivisionList)
            {

                <tr class="text-center">
                    <td>@item.DivisionId</td>
                    <td>@item.DivisionNameEn</td>
                    <td>@item.DivisionCode</td>
                    <td>@(item.DivisionHeadU.FirstNameEn + " " + item.DivisionHeadU.FatherNameEn + " " + item.DivisionHeadU.GrandNameEn + " " + item.DivisionHeadU.FamilyNameEn)</td>
                    <td>@(item.ReportingToU.FirstNameEn + " " + item.ReportingToU.FatherNameEn + " " + item.ReportingToU.GrandNameEn + " " + item.ReportingToU.FamilyNameEn)</td>
                    <td>@item.Branch.BranchNameEn</td>
                    <td>@item.Company.CoNameEn</td>

                    <td class="text-center padding-5">
                        <a href="~/HumanResource/Divisions/edit/@item.DivisionId" class="btn btn-default btn-block  btn-xs "><i class="fa fa-edit"></i></a>
                    </td>
                    <td class="text-center padding-5">
                        <a href="javascript:void(0)" class="btn btn-default btn-block btn-xs " onclick="deleteItem('@item.DivisionId')"><i class="fa fa-times text-danger"></i></a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>


<script>
    $(function () {

        _initDatatable('#dtList');
        $('#dtList').show();
    });
    var applicationName = getApplicationName();

    function deleteItem(id) {
        confirmAction('Confirm ?', 'Are you sure you want to save changes ?', 'info', 'Yes', 'No').then(function (result) {
            if (result.value == true) {

                $.ajax({
                    url: applicationName + "HumanResource/Divisions/delete",
                    async: false,
                    type: "POST",
                    data: { id },
                    success: function (data) {
                        if (data.result.isError != true) {
                            showMsg('Deleted !', 'Record has been deleted !', 'success');
                            setTimeout(function () {
                                window.location = applicationName + 'HumanResource/Divisions';
                            }, 500);
                        }
                        else if (data.result.msg != '') {
                            showMsg('Delete Failed !', data.result.msg, 'error');
                        }
                        else {
                            showMsg('Delete Failed !', 'Something went wrong. Try again', 'error');
                        }
                    }
                });
            }
        });
    }

</script>