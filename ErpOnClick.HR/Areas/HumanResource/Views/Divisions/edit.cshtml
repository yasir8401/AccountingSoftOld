@using ErpOnClick.ErpMain.Resources
@inject LocService SharedLocalizer

@using ErpOnClick.DAL.Models
@{


    IList<Branch> branchList = Model.branchList;
    IList<Company> companyList = Model.companyList;
    IList<Emp> EmpList = Model.EmpList;


    Divisions DivisionsDetails = Model.DivisionDetails;
    bool isEdit = (DivisionsDetails != null);
}



<form id="frmEdit" role="form" enctype="multipart/form-data">
    <input type="hidden" id="ACTION_TYPE" name="ACTION_TYPE" value="@(isEdit ? "update" : "save")" />
    <input type="hidden" id="DivisionId" name="DivisionId" class="form-control" value="@(DivisionsDetails != null ? DivisionsDetails.DivisionId : 0)" @(isEdit ? "readonly" : "") min="3" maxlength="3">
    <input type="hidden" id="CompanyId" name="CompanyId" class="form-control" value="@(DivisionsDetails != null ? DivisionsDetails.CompanyId : 0)" >
    <input type="hidden" id="BranchId" name="BranchId" class="form-control" value="@(DivisionsDetails != null ? DivisionsDetails.BranchId : 0)" >

    <div class="card card-primary card-outline card-outline-tabs">
        <div class="card-header p-0 border-bottom-0">
            <ul class="nav nav-tabs" id="custom-content-below-tab" role="tablist">
                <li class="nav-item">
                    <a class="nav-link active" id="tabMain-tab" data-toggle="pill" href="#tabMain" role="tab" aria-controls="tabMain" aria-selected="true">@SharedLocalizer.GetLocalizedHtmlString("General Info")</a>
                </li>

                @if (isEdit)
                {
                    @Html.Partial("_tabsPartial", DivisionsDetails);
                }
            </ul>
        </div>



        <div class="card-body bg-gray-light">

            <div class="tab-content" id="custom-content-below-tabContent">
                <div class="tab-pane fade active show" id="tabMain" role="tabpanel" aria-labelledby="tabMain-tab">
                    <div>
                        <div class="card card-default card-outline col-lg-8">

                            <div class="card-header">
                                <h2 class="card-title mt-3">
                                    @SharedLocalizer.GetLocalizedHtmlString("Details")
                                </h2>
                                <!-- tools box -->
                                <div class="card-tools pr-0">
                                    <button type="submit" class="btn  btn-sm btn-primary">
                                        <i class="fas fa-save fa-fw"></i> @SharedLocalizer.GetLocalizedHtmlString("Save")
                                    </button>
                                    <a href="~/HumanResource/divisions" type="button" class="btn  btn-sm btn-default">
                                        <i class="fas fa-arrow-left fa-fw"></i> @SharedLocalizer.GetLocalizedHtmlString("Return")
                                    </a>
                                </div>
                                <!-- /. tools -->
                            </div>
                            <div class="card-body">

                                <div class="row">

                                    <div class="col-sm-6" style="display:none">
                                        <div class="form-group">
                                            <label>@SharedLocalizer.GetLocalizedHtmlString("Company")</label>
                                            <select id="CompanyId" name="CompanyId" class="form-control">
                                                <option selected></option>
                                                @foreach (var item in companyList)
                                                {
                                                    <option value="@item.CompanyId" @(DivisionsDetails != null && DivisionsDetails.CompanyId == item.CompanyId ? "selected" : "")>
                                                        @item.CoNameEn
                                                    </option>
                                                }
                                            </select>
                                        </div>
                                    </div>
                                    <div class="col-sm-6" style="display:none">
                                        <div class="form-group">
                                            <label>@SharedLocalizer.GetLocalizedHtmlString("Branch")</label>
                                            <select id="BranchId" name="BranchId" class="form-control">
                                                <option selected></option>
                                                @foreach (var item in branchList)
                                                {
                                                    <option value="@item.BranchId" @(DivisionsDetails != null && DivisionsDetails.BranchId == item.BranchId ? "selected" : "")>
                                                        @item.BranchNameEn
                                                    </option>
                                                }
                                            </select>
                                        </div>
                                    </div>
                                    <div class="col-sm-6 ">
                                        <div class="form-group">
                                            <label>@SharedLocalizer.GetLocalizedHtmlString("Division Head")</label>
                                            <select id="DivisionHeadUid" name="DivisionHeadUid" class="form-control" required>
                                                <option selected></option>
                                                @foreach (var item in EmpList)
                                                {
                                                    <option value="@item.EmpId" @(DivisionsDetails != null && DivisionsDetails.DivisionHeadUid == item.EmpId ? "selected" : "")>
                                                        @(item.FirstNameEn + " " + item.FatherNameEn + " " + item.GrandNameEn + " " + item.FamilyNameEn)
                                                    </option>
                                                }
                                            </select>
                                        </div>
                                    </div>
                                    <div class="col-sm-6 ">
                                        <div class="form-group">
                                            <label>@SharedLocalizer.GetLocalizedHtmlString("Reporting To")</label>
                                            <select id="ReportingToUid" name="ReportingToUid" class="form-control" required>
                                                <option selected></option>
                                                @foreach (var item in EmpList)
                                                {
                                                    <option value="@item.EmpId" @(DivisionsDetails != null && DivisionsDetails.ReportingToUid == item.EmpId ? "selected" : "")>
                                                        @(item.FirstNameEn + " " + item.FatherNameEn + " " + item.GrandNameEn + " " + item.FamilyNameEn)
                                                    </option>
                                                }
                                            </select>
                                        </div>
                                    </div>
                                    <div class="col-sm-6">
                                        <div class="form-group">
                                            <label>@SharedLocalizer.GetLocalizedHtmlString("Name")</label>
                                            <input type="text" id="DivisionNameEn" name="DivisionNameEn" class="form-control" value="@(DivisionsDetails!=null?DivisionsDetails.DivisionNameEn: null)">
                                        </div>
                                    </div>
                                    <div class="col-sm-6">
                                        <div class="form-group">
                                            <label>@SharedLocalizer.GetLocalizedHtmlString("Name Arabic")</label>
                                            <input type="text" id="DivisionNameAr" name="DivisionNameAr" class="form-control" value="@(DivisionsDetails!=null?DivisionsDetails.DivisionNameAr: null)">
                                        </div>
                                    </div>

                                    <div class="col-sm-12">
                                        <div class="form-group">
                                            <label>@SharedLocalizer.GetLocalizedHtmlString("Division Code") </label>
                                            <input type="text" id="DivisionCode" name="DivisionCode" class="form-control" value="@(DivisionsDetails!=null?DivisionsDetails.DivisionCode: null)">
                                        </div>
                                    </div>


                                </div>
                            </div>
                        </div>

                    </div>
                </div>


            </div>

        </div>
    </div>



</form>





@section scripts{

    <script>

        $(function () {
            BindGrid_Eduction();

        });

        var applicationName = getApplicationName();

        $('#CompanyId').change(function () {

            var id = $('#CompanyId').val();

            $.ajax({
                url: applicationName + "Ajax/BranchCascading",
                async: false,
                type: "POST",
                data: { id: id },
                success: function (data) {

                    var item = '';

                    $.each(data.result, function (i, product) {

                        item += "<option value='" + product.branchId + "'>" + product.branchNameEn + "</option>";
                    });

                    $("#BranchId").html(item);

                }
            });

        });

        $('#frmEdit').on('submit', function (e) {
            e.preventDefault();
            var actionType = $('#ACTION_TYPE').val();

            confirmAction('Confirm ?', 'Are you sure you want to save changes ?', 'info', 'Yes', 'No').then(function (result) {
                if (result.value == true) {

                    var params = $('#frmEdit').serialize();
                    $.ajax({
                        url: applicationName + "HumanResource/divisions/" + actionType,
                        async: false,
                        type: "POST",
                        data: params,
                        success: function (data) {
                            if (data.result.isError != true) {
                                var id = data.result.scalerVal;

                                showMsg('Saved !', 'Record has been saved !', 'success');
                                setTimeout(function () {
                                    window.location = applicationName + `HumanResource/divisions/edit/${id}`;
                                }, 100);
                            }
                            else if (data.result.msg != '') {
                                showMsg('Save Failed !', data.result.msg, 'error');
                            }
                            else {
                                showMsg('Save Failed !', 'Something went wrong. Try again', 'error');
                            }
                        }
                    });
                }
            });
        });



        function BindGrid_Eduction() {

            var test = $('#frmSearch').serialize();

            $('#divListEduction').html('<h5 class="margin-0"><p><i class="fa fa-spinner fa-spin fa-fw"></i> Please wait while data is loading...</p></h5>');
            $.ajax({
                url: applicationName + 'HumanResource/divisionsEducation/_list',
                data: $('#frmSearch').serialize(),
                success: function (data) {
                    $('#divListEduction').html(data);
                }
            })
        };



    </script>

}