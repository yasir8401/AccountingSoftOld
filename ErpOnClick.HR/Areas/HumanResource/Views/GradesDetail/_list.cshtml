@using ErpOnClick.DAL.Models
@using ErpOnClick.ErpMain.Resources
@inject LocService SharedLocalizer

@{
    List<GradesDetail> GradesDetailList = Model.GradesDetailList;
    var gradeId = Model.gradeID;
}

<div class="table-responsive pb-2 ">
    <table id="dtList" class="table table-hover table-condensed " style="display:none">
        <thead class="text-sm">
            <tr>
                <th> @SharedLocalizer.GetLocalizedHtmlString("Id") </th>
                <th> @SharedLocalizer.GetLocalizedHtmlString("Grade") </th>
                <th> @SharedLocalizer.GetLocalizedHtmlString("From") </th>
                <th> @SharedLocalizer.GetLocalizedHtmlString("To") </th>
                <th> @SharedLocalizer.GetLocalizedHtmlString("IsEnable") </th>



                <th width="30px"></th>
                <th width="30px"></th>
            </tr>
        </thead>
        <tfoot style="display:table-row-group">
            <tr class="text-center">

                <th> Id </th>
                <th> Grade </th>
                <th> From </th>
                <th> To </th>
                <th> IsEnable </th>



                <th></th>
                <th></th>

            </tr>
        </tfoot>
        <tbody>
            @foreach (var item in GradesDetailList)
            {

                <tr class="text-center">
                    <td>@item.GradeDetailId </td>
                    <td>@item.Grade.GradeNameEn </td>
                    <td>@item.RangeFrom </td>
                    <td>@item.RangeTo </td>
                    <td><i class="@(item.IsEnable==true?"fa fa-check":"")"></i></td>


                    <td class="text-center padding-5">
                        <a href="~/HumanResource/GradesDetail/edit/grade/@item.GradeId/@item.GradeDetailId" class="btn btn-default btn-block  btn-xs "><i class="fa fa-edit"></i></a>
                    </td>
                    <td class="text-center padding-5">
                        <a href="javascript:void(0)" class="btn btn-default btn-block btn-xs " onclick="deleteItem('@item.GradeDetailId')"><i class="fa fa-times text-danger"></i></a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>


<script>
    $(function () {

        _initDatatable('#dtList');
        $('#dtList').show();
    });
    var applicationName = getApplicationName();

    function deleteItem(id) {
        confirmAction('Confirm ?', 'Are you sure you want to save changes ?', 'info', 'Yes', 'No').then(function (result) {
            if (result.value == true) {

                $.ajax({
                    url: applicationName +"HumanResource/GradesDetail/delete",
                    async: false,
                    type: "POST",
                    data: { id },
                    success: function (data) {
                        if (data.result.isError != true) {
                            showMsg('Deleted !', 'Record has been deleted !', 'success');
                            setTimeout(function () {
                                window.location = applicationName +'HumanResource/GradesDetail/grade/@gradeId';

                            }, 500);
                        }
                        else if (data.result.msg != '') {
                            showMsg('Delete Failed !', data.result.msg, 'error');
                        }
                        else {
                            showMsg('Delete Failed !', 'Something went wrong. Try again', 'error');
                        }
                    }
                });
            }
        });
    }

</script>