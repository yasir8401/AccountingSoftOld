@using ErpOnClick.DAL.Models
@using ErpOnClick.ErpMain.Resources
@inject LocService SharedLocalizer

@{
    List<Grades1> GradesList = Model.GradeList;

}


<div class="table-responsive pb-2 ">
    <table id="dtList" class="table table-hover table-condensed " style="display:none">
        <thead class="text-sm">
            <tr>
                <th> @SharedLocalizer.GetLocalizedHtmlString("Id") </th>
                <th> @SharedLocalizer.GetLocalizedHtmlString("Name") </th>
                <th> @SharedLocalizer.GetLocalizedHtmlString("Code")</th>
                <th> @SharedLocalizer.GetLocalizedHtmlString("Family")</th>
                <th> @SharedLocalizer.GetLocalizedHtmlString("Months")</th>
                <th>    @SharedLocalizer.GetLocalizedHtmlString("Vacations")</th>
                <th> @SharedLocalizer.GetLocalizedHtmlString("Loan")</th>
                <th> @SharedLocalizer.GetLocalizedHtmlString("Vehicle")</th>
                <th> @SharedLocalizer.GetLocalizedHtmlString("Comission")</th>

                <th width="30px"></th>
                <th width="30px"></th>
            </tr>
        </thead>
        <tfoot style="display:table-row-group">
            <tr class="text-center">
                <th> Id </th>
                <th> Name </th>
                <th> Code</th>
                <th> Family</th>
                <th> Months</th>
                <th> Vacations</th>
                <th> Loan</th>
                <th> Vehicle</th>
                <th> Comission</th>
                <th></th>
                <th></th>

            </tr>
        </tfoot>
        <tbody>
            @foreach (var item in GradesList)
            {

                <tr class="text-center">
                    <td>@item.GradeId </td>
                    <td>@item.GradeNameEn </td>
                    <td>@item.GradeCode</td>
                    <td>@item.FamilyDependencies</td>
                    <td>@item.ContractDurationMonths</td>
                    <td>@item.YearlyVacationDays</td>
                    <td><i class="@(item.LoanEligibility==true?"fa fa-check":"")"></i></td>
                    <td><i class="@(item.VehicleEligibility==true?"fa fa-check":"")"></i></td>
                    <td><i class="@(item.ComissionEligibility==true?"fa fa-check":"")"></i></td>



                    <td class="text-center padding-5">
                        <a href="~/HumanResource/Grades/edit/@item.GradeId" class="btn btn-default btn-block  btn-xs "><i class="fa fa-edit"></i></a>
                    </td>
                    <td class="text-center padding-5">
                        <a href="javascript:void(0)" class="btn btn-default btn-block btn-xs " onclick="deleteItem('@item.GradeId')"><i class="fa fa-times text-danger"></i></a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>


<script>
    $(function () {

        _initDatatable('#dtList');
        $('#dtList').show();
    });
    var applicationName = getApplicationName();

    function deleteItem(id) {
        confirmAction('Confirm ?', 'Are you sure you want to save changes ?', 'info', 'Yes', 'No').then(function (result) {
            if (result.value == true) {

                $.ajax({
                    url: applicationName + "HumanResource/Grades/delete",
                    async: false,
                    type: "POST",
                    data: { id },
                    success: function (data) {
                        if (data.result.isError != true) {
                            showMsg('Deleted !', 'Record has been deleted !', 'success');
                            setTimeout(function () {
                                window.location = applicationName + 'HumanResource/Grades';
                            }, 500);
                        }
                        else if (data.result.msg != '') {
                            showMsg('Delete Failed !', data.result.msg, 'error');
                        }
                        else {
                            showMsg('Delete Failed !', 'Something went wrong. Try again', 'error');
                        }
                    }
                });
            }
        });
    }

</script>