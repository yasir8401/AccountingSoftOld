@using ErpOnClick.DAL.Models
@using ErpOnClick.ErpMain.Resources
@inject LocService SharedLocalizer

@{
    List<PayrunM> PayRunMList = Model.PayRunMList;

}

<div class="table-responsive pb-2 ">
    <table id="dtList" class="table table-hover table-condensed " style="display:none">
        <thead class="text-sm">
            <tr>

                <th>  @SharedLocalizer.GetLocalizedHtmlString("Year") </th>
                <th> @SharedLocalizer.GetLocalizedHtmlString("Month")  </th>
                <th>  @SharedLocalizer.GetLocalizedHtmlString("Earning") </th>
                <th>  @SharedLocalizer.GetLocalizedHtmlString("Deduction") </th>
                <th>  @SharedLocalizer.GetLocalizedHtmlString("Net Total") </th>
               

                <th width="30px"></th>
                <th width="30px"></th>
            </tr>
        </thead>
        <tfoot style="display:table-row-group">
            <tr class="text-center">

                <th>  Year </th>
                <th>  Month </th>
                <th>  Earning </th>
                <th>  Deduction </th>
                <th>  Net Total </th>
        

                <th width="30px"></th>
                <th width="30px"></th>

            </tr>
        </tfoot>
        <tbody>
            @foreach (var item in PayRunMList)
            {

                <tr class="text-center">

                    <td align="left">  @item.YearId </td>
                    <td align="left">  @System.Globalization.DateTimeFormatInfo.CurrentInfo.GetAbbreviatedMonthName(item.MonthId)</td>
                    <td align="right">  @(String.Format("{0:.00}",item.TotalEarning ))</td>
                    <td align="right">  @(String.Format("{0:.00}",item.TotalDeduction)) </td>
                    <td align="right">  @(String.Format("{0:.00}",item.NetTotal)) </td>
            
                    <td class="text-center padding-5">
                        <a href="~/HumanResource/PayRunM/edit/@item.PayrunId" class="btn btn-default btn-block  btn-xs "><i class="fa fa-edit"></i></a>
                    </td>
                    <td class="text-center padding-5">
                        <a href="javascript:void(0)"  class="@(item.MonthId != DateTime.Now.Month ? "disabled":"") btn btn-default btn-block btn-xs " onclick="deleteItem('@item.PayrunId',@item.MonthId.ToString())"><i class="fa fa-times text-danger"></i></a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>


<script>
    $(function () {

        _initDatatable('#dtList');
        $('#dtList').show();
    });
    var applicationName = getApplicationName();

    function deleteItem(id, month) {
        confirmAction('Confirm ?', 'Are you sure you want to save changes ?', 'info', 'Yes', 'No').then(function (result) {
            if (result.value == true) {
               
              

                $.ajax({
                    url: applicationName + "HumanResource/PayRunM/delete",
                    async: false,
                    type: "POST",
                    data: { id },
                    success: function (data) {
                        if (data.result.isError != true) {
                            showMsg('Deleted !', 'Record has been deleted !', 'success');
                            setTimeout(function () {
                                window.location = applicationName + 'HumanResource/PayRunM';
                            }, 500);
                        }
                        else if (data.result.msg != '') {
                            showMsg('Delete Failed !', data.result.msg, 'error');
                        }
                        else {
                            showMsg('Delete Failed !', 'Something went wrong. Try again', 'error');
                        }
                    }
                });
            }
        });
    }

</script>