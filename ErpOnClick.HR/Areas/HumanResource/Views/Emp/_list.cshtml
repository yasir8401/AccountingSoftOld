@using ErpOnClick.DAL.Models
@using ErpOnClick.ErpMain.Resources
@using ErpOnClick.DAL.Utilities

@inject LocService SharedLocalizer
@inject Microsoft.AspNetCore.Hosting.IHostingEnvironment _env;



@{
    var filePath = NativePaths.GetFilePath(_env);
    List<Emp> empList = Model.EmpList;

}


<div class="table-responsive pb-2 ">
    <table id="dtList" class="table table-hover table-condensed " style="display:none">
        <thead class="text-sm">
            <tr>
                @*<th width="20px">@SharedLocalizer.GetLocalizedHtmlString("DP")</th>*@
                <th width="10px">@SharedLocalizer.GetLocalizedHtmlString("Id")</th>
                <th width="100px">@SharedLocalizer.GetLocalizedHtmlString("Emp Code")</th>
                <th>@SharedLocalizer.GetLocalizedHtmlString("First Name")</th>  
                <th>@SharedLocalizer.GetLocalizedHtmlString("DOB")</th>
                <th>@SharedLocalizer.GetLocalizedHtmlString("Position")</th>



                <th width="30px"></th>
                <th width="30px"></th>
            </tr>
        </thead>
        <tfoot style="display:table-row-group">
            <tr class="text-center">
                @*<th>DP</th>*@
                <th width="10px">Id</th>
                <th width="10px">Emp Code</th>
                <th>First Name</th>
                <th>DOB</th>
                <th>Position</th>


                <th></th>
                <th></th>

            </tr>
        </tfoot>
        <tbody>
            @foreach (var item in empList)
            {

                <tr class="text-center">
                    @*<td align="left"><img class="img-circle" src="@filePath@item.ProfilePic" height="50" width="50" /></td>*@
                    <td>@item.EmpId</td>
                    <td align="left">@item.EmpCode</td>
                    <td align="left">@item.FirstNameEn @item.FatherNameEn</td>

                    <td align="left">@(item.Dob != null ? Convert.ToDateTime(item.Dob).ToString("dd-MMM-yyyy") : "")</td>
                    <td align="left">@(item.DesignationPosition != null ? item.DesignationPosition.PositionNameEn : "")</td>


                    <td class="text-center padding-5">
                        <a href="~/HumanResource/emp/edit/@item.EmpId" class="btn btn-default btn-block  btn-xs "><i class="fa fa-edit"></i></a>
                    </td>
                    <td class="text-center padding-5">
                        <a href="javascript:void(0)" class="btn btn-default btn-block btn-xs " onclick="deleteItem('@item.EmpId')"><i class="fa fa-times text-danger"></i></a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>


<script>
    $(function () {

        _initDatatable('#dtList');
        $('#dtList').show();
    });
    var applicationName = getApplicationName();


    function deleteItem(id) {
        confirmAction('Confirm ?', 'Are you sure you want to save changes ?', 'info', 'Yes', 'No').then(function (result) {
            if (result.value == true) {

                $.ajax({
                    url: applicationName + "HumanResource/emp/delete",
                    async: false,
                    type: "POST",
                    data: { id },
                    success: function (data) {
                        if (data.result.isError != true) {
                            showMsg('Deleted !', 'Record has been deleted !', 'success');
                            setTimeout(function () {
                                window.location = applicationName + 'HumanResource/emp';
                            }, 500);
                        }
                        else if (data.result.msg != '') {
                            showMsg('Delete Failed !', data.result.msg, 'error');
                        }
                        else {
                            showMsg('Delete Failed !', 'Something went wrong. Try again', 'error');
                        }
                    }
                });
            }
        });
    }

</script>