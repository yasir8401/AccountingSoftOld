@using ErpOnClick.DAL.Models
@using ErpOnClick.ErpMain.Models.HumanResource;
@using ErpOnClick.ErpMain.Resources
@inject LocService SharedLocalizer

@{

    IList<Lookups> ownerTypeList = Model.ownerTypeList;
    IList<Lookups> documentTypeList = Model.documentTypeList;
    IList<Branch> branchList = Model.branchList;
    IList<Company> companyList = Model.companyList;
    IList<UserForDocument> userForTheDoc = Model.userForTheDoc;


    Documents documentDetails = Model.documentDetails;
    bool isEdit = (documentDetails != null);
}



<form id="frmEdit" role="form" enctype="multipart/form-data">
    <input type="hidden" id="ACTION_TYPE" name="ACTION_TYPE" value="@(isEdit ? "update" : "save")" />
    <input type="hidden" id="DocId" name="DocId" class="form-control" value="@(documentDetails != null ? documentDetails.DocId : 0)" @(isEdit ? "readonly" : "") min="3" maxlength="3">
    <div class="card card-default card-outline col-lg-8">
        <div class="card-header">
            <h2 class="card-title">
                @SharedLocalizer.GetLocalizedHtmlString("Details")
            </h2>
            <div class="card-tools">
                <button type="submit" class="btn  btn-sm btn-primary">
                    <i class="fas fa-save fa-fw"></i> @SharedLocalizer.GetLocalizedHtmlString("Save")
                </button>
                <a href="~/HumanResource/document" type="button" class="btn  btn-sm btn-default">
                    <i class="fas fa-arrow-left fa-fw"></i> @SharedLocalizer.GetLocalizedHtmlString("Return")
                </a>
            </div>
        </div>

        <div class="card-body">
            <div class="row">
                @*<div class="col-sm-6 ">
                        <div class="form-group">
                            <label>@SharedLocalizer.GetLocalizedHtmlString("Company")</label>
                            <select id="CompanyId" name="CompanyId" class="form-control">
                                <option></option>
                                @foreach (var item in companyList)
                                {
                                    <option value="@item.CompanyId" @(documentDetails != null && documentDetails.CompanyId == item.CompanyId ? "selected" : "")>
                                        @item.CoNameEn
                                    </option>
                                }
                            </select>
                        </div>
                    </div>
                    <div class="col-sm-6 ">
                        <div class="form-group">
                            <label>@SharedLocalizer.GetLocalizedHtmlString("Branch")</label>
                            <select id="BranchId" name="BranchId" class="form-control">
                                @if (isEdit)
                                {
                                    @foreach (var item in branchList)
                                    {
                                        <option value="@item.BranchId" @(documentDetails != null && documentDetails.BranchId == item.BranchId ? "selected" : "")>
                                            @item.BranchNameEn
                                        </option>
                                    }
                                }
                            </select>
                        </div>
                    </div>*@
                <div class="col-sm-6 ">
                    <div class="form-group">
                        <label> @SharedLocalizer.GetLocalizedHtmlString("Owner Type")</label>
                        <select id="DocOwnerType" name="DocOwnerType" class="form-control">

                            @foreach (var item in ownerTypeList)
                            {
                                <option value="@item.Code" @(documentDetails != null && documentDetails.DocOwnerType == item.Code ? "selected" : "")>
                                    @item.LookupNameEn
                                </option>
                            }
                        </select>
                    </div>
                </div>
                <div class="col-sm-6 ">
                    <div class="form-group">
                        <label> @SharedLocalizer.GetLocalizedHtmlString("Owner Name")</label>
                        <select id="DocOwnerId" name="DocOwnerId" class="form-control select2">

                            @foreach (var item in userForTheDoc)
                            {
                                <option value="@item.ID" @(documentDetails != null && documentDetails.DocOwnerId == item.ID ? "selected" : "")>
                                    @item.Name
                                </option>
                            }
                        </select>
                    </div>
                </div>
                <div class="col-sm-6 ">
                    <div class="form-group">
                        <label> @SharedLocalizer.GetLocalizedHtmlString("Doc Type")</label>
                        <select id="DocType" name="DocType" class="form-control">

                            @foreach (var item in documentTypeList)
                            {
                                <option value="@item.Code" @(documentDetails != null && documentDetails.DocType == item.Code ? "selected" : "")>
                                    @item.LookupNameEn
                                </option>
                            }
                        </select>
                    </div>
                </div>
                <div class="col-sm-6">
                    <div class="form-group">
                        <label>@SharedLocalizer.GetLocalizedHtmlString("File")</label>
                        @if (documentDetails != null && documentDetails.DocFile != null)
                        {
                            <span class="form-control border-0">
                                <a href="~/Files/@documentDetails.DocFile" download="">@SharedLocalizer.GetLocalizedHtmlString("DownloadPDF")</a>
                                <input type="text" hidden id="DocFile" value="@documentDetails.DocFile" name="DocFile" class="form-control">
                            </span>
                        }
                        else
                        {
                            <input type="file" id="FileToUpload" name="FileToUpload" class="form-control">
                        }

                    </div>
                </div>
                <div class="col-sm-6">
                    <div class="form-group">
                        <label>@SharedLocalizer.GetLocalizedHtmlString("Issued Date")</label>
                        <input type="text" id="DocIssuedDate" name="DocIssuedDate" class="form-control DatePicker" value="@(documentDetails != null && documentDetails.DocIssuedDate !=null ? Convert.ToDateTime(documentDetails.DocIssuedDate).ToString("dd-MMM-yyyy") : "")">

                    </div>
                </div>
                <div class="col-sm-6">
                    <div class="form-group">
                        <label>@SharedLocalizer.GetLocalizedHtmlString("Issued Date Hijri")</label>
                        <input type="text" id="DocIssuedDateH" name="DocIssuedDateH" class="form-control DatePicker" value="@(documentDetails != null && documentDetails.DocIssuedDateH !=null ? Convert.ToDateTime(documentDetails.DocIssuedDateH).ToString("dd-MMM-yyyy") : "")">

                    </div>
                </div>
                <div class="col-sm-6">
                    <div class="form-group">
                        <label>@SharedLocalizer.GetLocalizedHtmlString("End Date")</label>
                        <input type="text" id="DocEndDate" name="DocEndDate" class="form-control DatePicker" value="@(documentDetails != null && documentDetails.DocEndDate !=null ? Convert.ToDateTime(documentDetails.DocEndDate).ToString("dd-MMM-yyyy") : "")">

                    </div>
                </div>
                <div class="col-sm-6">
                    <div class="form-group">
                        <label>@SharedLocalizer.GetLocalizedHtmlString("End Date Hijri")</label>
                        <input type="text" id="DocEndDateH" name="DocEndDateH" class="form-control DatePicker" value="@(documentDetails != null && documentDetails.DocEndDateH !=null ? Convert.ToDateTime(documentDetails.DocEndDateH).ToString("dd-MMM-yyyy") : "")">

                    </div>
                </div>
                <div class="col-sm-12">
                    <label>@SharedLocalizer.GetLocalizedHtmlString("Description")</label>
                    <div class=" card card-outline card-body p-2">
                        <textarea id="DocDesc" name="DocDesc" class="form-control " style="border:none" placeholder="Enter Document Description here...">@(documentDetails != null ? documentDetails.DocDesc : "")</textarea>
                    </div>
                </div>
            </div>
        </div>
    </div>
</form>





@section scripts{

    <script>

        $(function () {

            //$('#DocDesc').summernote(
            //    {
            //        height: 200,

            //    }
            //);
        });
        var applicationName = getApplicationName();

        $('#frmEdit').on('submit', function (e) {
            e.preventDefault();
            var actionType = $('#ACTION_TYPE').val();

            confirmAction('Confirm ?', 'Are you sure you want to save changes ?', 'info', 'Yes', 'No').then(function (result) {
                if (result.value == true) {

                    var params = $('#frmEdit').serialize();
                    var formEl = document.forms.frmEdit;
                    var formData = new FormData(formEl);

                    $.ajax({
                        url: applicationName + "HumanResource/document/" + actionType,
                        type: "POST",
                        data: formData ? formData : params,
                        async: false,
                        cache: false,
                        contentType: false,
                        processData: false,
                        success: function (data) {
                            if (data.result.isError != true) {
                                showMsg('Saved !', 'Record has been saved !', 'success');
                                setTimeout(function () {
                                    window.location = applicationName + 'HumanResource/document';
                                }, 500);
                            }
                            else if (data.result.msg != '') {
                                showMsg('Save Failed !', data.result.msg, 'error');
                            }
                            else {
                                showMsg('Save Failed !', 'Something went wrong. Try again', 'error');
                            }
                        }
                    });
                }
            });




        });

        $('#CompanyId').change(function () {

            var id = $('#CompanyId').val();

            $.ajax({
                url: applicationName + "Ajax/BranchCascading",
                async: false,
                type: "POST",
                data: { id: id },
                success: function (data) {

                    var item = '';

                    $.each(data.result, function (i, product) {
                        debugger;
                        item += "<option value='" + product.branchId + "'>" + product.branchNameEn + "</option>";
                    });

                    $("#BranchId").html(item);

                }
            });

        });

        $('#DocOwnerType').change(function () {

            var id = $('#DocOwnerType').val();

            $.ajax({
                url: applicationName + "HumanResource/Document/GetUser",
                async: false,
                type: "POST",
                data: { id: id },
                success: function (data) {

                    var item = '';

                    $.each(data.result, function (i, product) {
                        debugger;
                        item += "<option value='" + product.id + "'>" + product.name + "</option>";
                    });

                    $("#DocOwnerId").html(item);

                }
            });

        });

    </script>

}