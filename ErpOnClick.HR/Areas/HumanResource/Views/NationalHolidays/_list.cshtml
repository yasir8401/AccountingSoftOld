@using ErpOnClick.DAL.Models
@using ErpOnClick.ErpMain.Resources
@inject LocService SharedLocalizer

@{
    List<NationalHolidays> NationalHolidayList = Model.NationalHolidayList;

}

<div class="table-responsive pb-2 ">
    <table id="dtList" class="table table-hover table-condensed " style="display:none">
        <thead class="text-sm">
            <tr>
                <th> @SharedLocalizer.GetLocalizedHtmlString("Id")</th>
                <th> @SharedLocalizer.GetLocalizedHtmlString("Name")</th>
                <th> @SharedLocalizer.GetLocalizedHtmlString("Code")</th>
                <th> @SharedLocalizer.GetLocalizedHtmlString("From")</th>
                <th> @SharedLocalizer.GetLocalizedHtmlString("To")</th>
                <th> @SharedLocalizer.GetLocalizedHtmlString("Total Days")</th>
                <th> @SharedLocalizer.GetLocalizedHtmlString("Over time")</th>
                <th width="30px"></th>
                <th width="30px"></th>
            </tr>
        </thead>
        <tfoot style="display:table-row-group">
            <tr class="text-center">
                <th> Id</th>
                <th> Name</th>
                <th> Code</th>
                <th> From</th>
                <th> To</th>
                <th> Total Days</th>
                <th> Overtime </th>
                <th></th>
                <th></th>

            </tr>
        </tfoot>
        <tbody>
            @foreach (var item in NationalHolidayList)
            {

                <tr class="text-center">
                    <td> @item.NationalHolidayId</td>
                    <td> @item.NationalHolidayNameEn</td>
                    <td> @item.NationalHolidayCode</td>
                    <td>@(item.FromDate != null ? Convert.ToDateTime(item.FromDate).ToString("dd-MMM-yyyy") : "")</td>
                    <td>@(item.ToDate != null ? Convert.ToDateTime(item.ToDate).ToString("dd-MMM-yyyy") : "")</td>
                    <td> @item.TotalDays</td>
                    <td> @item.OvertimeSetting.OvertimeSettingNameEn</td>

                    <td class="text-center padding-5">
                        <a href="~/HumanResource/NationalHolidays/edit/@item.NationalHolidayId" class="btn btn-default btn-block  btn-xs "><i class="fa fa-edit"></i></a>
                    </td>
                    <td class="text-center padding-5">
                        <a href="javascript:void(0)" class="btn btn-default btn-block btn-xs " onclick="deleteItem('@item.NationalHolidayId')"><i class="fa fa-times text-danger"></i></a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>


<script>
    $(function () {

        _initDatatable('#dtList');
        $('#dtList').show();
    });
    var applicationName = getApplicationName();

    function deleteItem(id) {
        confirmAction('Confirm ?', 'Are you sure you want to save changes ?', 'info', 'Yes', 'No').then(function (result) {
            if (result.value == true) {

                $.ajax({
                    url: applicationName + "HumanResource/NationalHolidays/delete",
                    async: false,
                    type: "POST",
                    data: { id },
                    success: function (data) {
                        if (data.result.isError != true) {
                            showMsg('Deleted !', 'Record has been deleted !', 'success');
                            setTimeout(function () {
                                window.location = applicationName + 'HumanResource/NationalHolidays';
                            }, 500);
                        }
                        else if (data.result.msg != '') {
                            showMsg('Delete Failed !', data.result.msg, 'error');
                        }
                        else {
                            showMsg('Delete Failed !', 'Something went wrong. Try again', 'error');
                        }
                    }
                });
            }
        });
    }

</script>