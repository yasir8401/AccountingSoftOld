@using ErpOnClick.DAL.Models
@using ErpOnClick.ErpMain.Resources
@inject LocService SharedLocalizer

@{
    IList<Branch> branchList = Model.branchList;
    IList<Company> companyList = Model.companyList;
    IList<OvertimeSettings> OvertimesettingList = Model.OvertimesettingsList;


    IList<Lookups> allowanceTypeList = Model.allowanceTypeList;
    var OvertimesettingId = Model.OvertimesettingsID;
    OvertimeSettings OvertimesettingsDetails = Model.OvertimesettingsDetails;

    OvertimeSettingsDetail OvertimesettingsDetailDetails = Model.OvertimeSettingsDetailDetails;
    bool isEdit = (OvertimesettingsDetailDetails != null);


}



<form id="frmEdit" role="form" enctype="multipart/form-data">
    <input type="hidden" id="ACTION_TYPE" name="ACTION_TYPE" value="@(isEdit ? "update" : "save")" />
    <input type="hidden" id="OvertimeSettingDetailId" name="OvertimeSettingDetailId" class="form-control" value="@(OvertimesettingsDetailDetails != null ? OvertimesettingsDetailDetails.OvertimeSettingDetailId : 0)" @(isEdit ? "readonly" : "") min="3" maxlength="3">
    <input type="hidden" id="CompanyId" name="CompanyId" class="form-control" value="@(OvertimesettingsDetailDetails != null ? OvertimesettingsDetailDetails.CompanyId : 0)" >
    <input type="hidden" id="BranchId" name="BranchId" class="form-control" value="@(OvertimesettingsDetailDetails != null ? OvertimesettingsDetailDetails.BranchId : 0)" >

    <div class="card card-default card-outline col-lg-8">
        <div class="card-header p-0 border-bottom-0">
            <ul class="nav nav-tabs" id="custom-content-below-tab" role="tablist">
                <li class="nav-item">
                    <a class="nav-link" onclick="window.location =  getApplicationName() + 'HumanResource/OverTimeSettings/edit/@OvertimesettingId'" href="javascript:void(0)">@SharedLocalizer.GetLocalizedHtmlString("OverTime Settings")</a>
                </li>

                <li class="nav-item">
                    <a class="nav-link" id="tabOvertimesettingDetail-tab" data-toggle="pill" onclick="window.location = getApplicationName() + 'HumanResource/OvertimesettingsDetail/Overtimesetting/@OvertimesettingsDetails.OvertimeSettingId.'" href="javascript:void(0)">@SharedLocalizer.GetLocalizedHtmlString("Details")</a>
                </li>


            </ul>
        </div>
        <div class="card-header">
            <h2 class="card-title">
                @SharedLocalizer.GetLocalizedHtmlString("Details")
            </h2>
            <!-- tools box -->
            <div class="card-tools">
                <button type="submit" class="btn  btn-sm btn-primary">
                    <i class="fas fa-save fa-fw"></i> @SharedLocalizer.GetLocalizedHtmlString("Save")
                </button>
                <a href="~/HumanResource/OvertimeSettingsDetail/Overtimesettings/@OvertimesettingId" type="button" class="btn  btn-sm btn-default">
                    <i class="fas fa-arrow-left fa-fw"></i> @SharedLocalizer.GetLocalizedHtmlString("Return")
                </a>

            </div>
            <!-- /. tools -->
        </div>
        <div class="card-body">

            <div class="row">
                <div class="col-sm-6">
                    <div class="form-group">
                        <div class="">
                            <label class="col-md-12">@SharedLocalizer.GetLocalizedHtmlString("IsEnable")</label>
                            <select id="IsEnable" name="IsEnable" class="form-control" required>

                                <option value="True" @(OvertimesettingsDetailDetails != null && OvertimesettingsDetailDetails.IsEnable != null ? (Convert.ToBoolean(OvertimesettingsDetailDetails.IsEnable) ? "selected" : "") : "")>Enable</option>
                                <option value="False" @(OvertimesettingsDetailDetails != null && OvertimesettingsDetailDetails.IsEnable != null ? (Convert.ToBoolean(OvertimesettingsDetailDetails.IsEnable) ? "" : "selected") : "")>Not</option>
                            </select>
                        </div>
                    </div>
                </div>
                <div class="col-sm-6 ">
                    <div class="form-group">
                        <label>@SharedLocalizer.GetLocalizedHtmlString("Overtime setting")</label>
                        <select id="OvertimeSettingId" name="OvertimeSettingId" class="form-control">
                            <option selected></option>
                            @foreach (var item in OvertimesettingList)
                            {
                                <option value="@item.OvertimeSettingId" @(OvertimesettingsDetailDetails != null && OvertimesettingsDetailDetails.OvertimeSettingId == item.OvertimeSettingId ? "selected" : "")>
                                    @item.OvertimeSettingNameEn
                                </option>
                            }
                        </select>
                    </div>
                </div>
                <div class="col-sm-6" style="display:none">
                    <div class="form-group">
                        <label>@SharedLocalizer.GetLocalizedHtmlString("Company")</label>
                        <select id="CompanyId" name="CompanyId" class="form-control">
                            <option selected></option>
                            @foreach (var item in companyList)
                            {
                                <option value="@item.CompanyId" @(OvertimesettingsDetailDetails != null && OvertimesettingsDetailDetails.CompanyId == item.CompanyId ? "selected" : "")>
                                    @item.CoNameEn
                                </option>
                            }
                        </select>
                    </div>
                </div>
                <div class="col-sm-6" style="display:none">
                    <div class="form-group">
                        <label>@SharedLocalizer.GetLocalizedHtmlString("Branch")</label>
                        <select id="BranchId" name="BranchId" class="form-control">
                            <option selected></option>
                            @foreach (var item in branchList)
                            {
                                <option value="@item.BranchId" @(OvertimesettingsDetailDetails != null && OvertimesettingsDetailDetails.BranchId == item.BranchId ? "selected" : "")>
                                    @item.BranchNameEn
                                </option>
                            }
                        </select>
                    </div>
                </div>
                <div class="col-sm-12 ">
                    <div class="form-group">

                        <label>@SharedLocalizer.GetLocalizedHtmlString("Allowance Type")</label><br /><hr />
                        @foreach (var item in allowanceTypeList)
                        {
                            <div class="row" style="padding:10px">
                                <label class="col-sm-6">@item.LookupNameEn</label>
                                @if (OvertimesettingsDetailDetails.AllowanceTypeId == item.Code)
                                {
                                    <input class="col-sm-6" type="radio" name="AllowanceTypeId" id="AllowanceTypeId" checked value="@item.Code" />
                                }
                                else
                                {
                                    <input class="col-sm-6" type="radio" name="AllowanceTypeId" id="AllowanceTypeId" value="@item.Code" />
                                }

                            </div>
                        }

                    </div>
                </div>

            </div>
        </div>

    </div>

</form>





@section scripts{

    <script>

        $(function () {

            $("#tabOvertimesettingDetail-tab").addClass("nav-link active");


        });

        var applicationName = getApplicationName();

        $('#frmEdit').on('submit', function (e) {
            e.preventDefault();
            var actionType = $('#ACTION_TYPE').val();

            confirmAction('Confirm ?', 'Are you sure you want to save changes ?', 'info', 'Yes', 'No').then(function (result) {
                if (result.value == true) {

                    var params = $('#frmEdit').serialize();
                    var formEl = document.forms.frmEdit;
                    var formData = new FormData(formEl);


                    $.ajax({
                        url: applicationName+"HumanResource/OvertimesettingsDetail/" + actionType,
                        type: "POST",
                        data: formData ? formData : params,
                        async: false,
                        cache: false,
                        contentType: false,
                        processData: false,
                        success: function (data) {
                            if (data.result.isError != true) {
                                showMsg('Saved !', 'Record has been saved !', 'success');
                                setTimeout(function () {
                                    window.location = applicationName+'HumanResource/OvertimesettingsDetail/Overtimesettings/@OvertimesettingId';
                                }, 500);
                            }
                            else if (data.result.msg != '') {
                                showMsg('Save Failed !', data.result.msg, 'error');
                            }
                            else {
                                showMsg('Save Failed !', 'Something went wrong. Try again', 'error');
                            }
                        }
                    });
                }
            });




        });

    </script>

}