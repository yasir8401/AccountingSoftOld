@using ErpOnClick.DAL.Models
@using ErpOnClick.ErpMain.Resources
@inject LocService SharedLocalizer

@{
    List<Items> ItemsIdList = Model.ItemsIdList;

}

<div class="table-responsive pb-2 ">
    <table id="dtList" class="table table-hover table-condensed ">
        <thead class="text-sm ">
            <tr class="col-lg-12">
                <th style="width:20px">@SharedLocalizer.GetLocalizedHtmlString("Id")</th>
                <th>@SharedLocalizer.GetLocalizedHtmlString("Item Name")</th>
                <th>@SharedLocalizer.GetLocalizedHtmlString("Item Name Arabic")</th>
                <th>@SharedLocalizer.GetLocalizedHtmlString("Item Code")</th>
                <th>@SharedLocalizer.GetLocalizedHtmlString("Item Category") </th>


                <th style="width:25px">@SharedLocalizer.GetLocalizedHtmlString("Edit")</th>
                <th style="width:25px">@SharedLocalizer.GetLocalizedHtmlString("Delete")</th>
            </tr>
        </thead>
        <tfoot style="display:table-row-group">
            <tr class="text-center">
                <th style="width:20px">ID</th>
                <th>Item Name EN</th>
                <th>Item Name AR</th>
                <th>Item Code</th>
                <th>Item Category </th>


                <td></td>
                <td></td>
            </tr>
        </tfoot>
        <tbody>
            @foreach (var item in ItemsIdList)
            {

                <tr class="text-center">
                    <td style="width:20px">@item.ItemId</td>
                    <td class="text-left">@item.ItemNameEn</td>
                    <td class="text-right">@item.ItemNameAr</td>
                    <td>@item.ItemCode</td>
                    <td>@item.ItemCategory.ItemCategoryNameEn</td>


                    <td class="text-center">
                        <a href="~/Inventory/Items/edit/@item.ItemId" class="btn btn-default btn-block  btn-xs "><i class="fa fa-edit"></i></a>
                    </td>
                    <td class="text-center">
                        <a href="javascript:void(0)" class="btn btn-default btn-block btn-xs " onclick="deleteItem('@item.ItemId')"><i class="fa fa-times text-danger"></i></a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>


<script>
    $(function () {
        _initDatatable('#dtList');
    });

    function deleteItem(id) {
        confirmAction('Confirm ?', 'Are you sure you want to save changes ?', 'info', 'Yes', 'No').then(function (result) {
            if (result.value == true) {

                $.ajax({
                    url: getApplicationName() + "Inventory/Items/delete",
                    async: false,
                    type: "POST",
                    data: { id },
                    success: function (data) {
                        if (data.result.isError != true) {
                            showMsg('Deleted !', 'Record has been deleted !', 'success');
                            setTimeout(function () {
                                window.location = getApplicationName() + 'Inventory/Items';
                            }, 500);
                        }
                        else if (data.result.msg != '') {
                            showMsg('Delete Failed !', data.result.msg, 'error');
                        }
                        else {
                            showMsg('Delete Failed !', 'Something went wrong. Try again', 'error');
                        }
                    }
                });
            }
        });
    }

</script>