@using ErpOnClick.DAL.Models
@using ErpOnClick.ErpMain.Resources
@inject LocService SharedLocalizer

@{
    FixedAsset FixedAssetDetail = Model.IdDetail;
    List<Branch> BranchDetails = Model.branchList;
    List<Lookups> DepreciationMethod = Model.DepreciationMethod;
    List<Lookups> AverageMethod = Model.AverageMethod;
    List<Lookups> AssetType = Model.AssetType;
    List<Accounts> AccountList = Model.AccountList;
    bool isEdit = (FixedAssetDetail != null);
}



<form id="frmEdit" role="form">
    <input type="hidden" id="ACTION_TYPE" name="ACTION_TYPE" value="@(isEdit ? "update" : "save")" />
    <input type="hidden" id="FixedAssetId" name="FixedAssetId" class="form-control" value="@(FixedAssetDetail != null ? FixedAssetDetail.FixedAssetId : 0)" />
    <input type="hidden" id="CompanyId" name="CompanyId" class="form-control" value="@(FixedAssetDetail != null ? FixedAssetDetail.CompanyId : 0)" />
    <input type="hidden" id="BranchId" name="BranchId" class="form-control" value="@(FixedAssetDetail != null ? FixedAssetDetail.BranchId : 0)" />


    <div class="card card-default card-outline col-lg-12">

        <div class="card-header">
            <h2 class="card-title">
                @SharedLocalizer.GetLocalizedHtmlString("Fixed Asset")
            </h2>
            <!-- tools box -->
            <div class="card-tools">
                <button type="submit" class="btn  btn-sm btn-primary">
                    <i class="fas fa-save fa-fw"></i> @SharedLocalizer.GetLocalizedHtmlString("Save")
                </button>
                <a href="~/Finance/FixedAsset" type="button" class="btn  btn-sm btn-default">
                    <i class="fas fa-arrow-left fa-fw"></i> @SharedLocalizer.GetLocalizedHtmlString("Return")
                </a>
            </div>
            <!-- /. tools -->
        </div>
    </div>


    <div class="card card-default card-outline col-lg-12">
        <div class="card-header">
            <h2 class="card-title">
                @SharedLocalizer.GetLocalizedHtmlString("Fixed Asset Info")
            </h2>
        </div>
        <div class="card-body">
            <div class="row">
                <div class="col-sm-3">
                    <div class="form-group">
                        <label>@SharedLocalizer.GetLocalizedHtmlString("Name")</label>
                        <input type="text" id="FixedAssetEn" name="FixedAssetEn" class="form-control" required value="@(FixedAssetDetail != null ? FixedAssetDetail.FixedAssetEn : "")">
                    </div>
                </div>
                <div class="col-sm-3">
                    <div class="form-group">
                        <label>@SharedLocalizer.GetLocalizedHtmlString("Name (Arabic)")</label>
                        <input type="text" id="FixedAssetAr" name="FixedAssetAr" class="form-control" value="@(FixedAssetDetail != null ? FixedAssetDetail.FixedAssetAr : "")">
                    </div>
                </div>
                <div class="col-sm-3">
                    <div class="form-group">
                        <label>@SharedLocalizer.GetLocalizedHtmlString("Fixed Asset#")</label>
                        <input type="text" id="FixedAssetNo" name="FixedAssetNo" class="form-control" value="@(FixedAssetDetail != null ? FixedAssetDetail.FixedAssetNo : "")">
                    </div>
                </div>
                <div class="col-sm-3">
                    <div class="form-group">
                        <label>@SharedLocalizer.GetLocalizedHtmlString("Fixed Asset Type")</label>
                        <select id="AssetTypeId" name="AssetTypeId" class="form-control" required>
                            <option></option>
                            @foreach (var item in AssetType)
                            {
                                <option value="@item.Code" @(FixedAssetDetail != null && FixedAssetDetail.AssetTypeId == item.Code ? "selected" : "")> @item.LookupNameEn</option>
                            }
                        </select>
                    </div>
                </div>
                <div class="col-sm-3">
                    <div class="form-group">
                        <label>@SharedLocalizer.GetLocalizedHtmlString("Purchase Date")</label>
                        <input name="PurchaseDate" id="PurchaseDate" required class="form-control DatePicker" value="@(FixedAssetDetail != null && FixedAssetDetail.PurchaseDate != null ? Convert.ToDateTime(FixedAssetDetail.PurchaseDate).ToString("dd-MMM-yyyy") : "")" />

                    </div>
                </div>
                <div class="col-sm-3">
                    <div class="form-group">
                        <label>@SharedLocalizer.GetLocalizedHtmlString("Purchase Price")</label>
                        <input type="number" id="PurchasePrice" name="PurchasePrice" class="form-control" value="@(FixedAssetDetail != null ? FixedAssetDetail.PurchasePrice : 0)">
                    </div>
                </div>
                <div class="col-sm-3">
                    <div class="form-group">
                        <label>@SharedLocalizer.GetLocalizedHtmlString("Warranty Expiry")</label>
                        <input name="WarrantyExpiry" required id="WarrantyExpiry" class="form-control DatePicker" value="@(FixedAssetDetail != null && FixedAssetDetail.WarrantyExpiry != null ? Convert.ToDateTime(FixedAssetDetail.WarrantyExpiry).ToString("dd-MMM-yyyy") : "")" />
                    </div>
                </div>
                <div class="col-sm-3">
                    <div class="form-group">
                        <label>@SharedLocalizer.GetLocalizedHtmlString("Serial#")</label>
                        <input type="text" id="SerialNo" name="SerialNo" class="form-control" value="@(FixedAssetDetail != null ? FixedAssetDetail.SerialNo : "")">
                    </div>
                </div>
                <div class="col-sm-3">
                    <div class="form-group">
                        <label>@SharedLocalizer.GetLocalizedHtmlString("Chart of Account")</label>
                        <select id="AccountId" name="AccountId" class="form-control select2">
                            <option></option>
                            @foreach (var head in AccountList.Where(c => c.AccountLevel == 1))
                            {
                                foreach (var subhead in AccountList.Where(c => c.AccountLevel == 2 && c.ParentAccountId == head.AccountId))
                                {
                                    foreach (var subsubhead in AccountList.Where(c => c.AccountLevel == 3 && c.ParentAccountId == subhead.AccountId))
                                    {
                                        foreach (var lowerhead in AccountList.Where(c => c.AccountLevel == 4 && c.ParentAccountId == subsubhead.AccountId))
                                        {
                                            foreach (var transactionable in AccountList.Where(c => c.AccountLevel == 5 && c.ParentAccountId == lowerhead.AccountId))
                                            {
                                                if (transactionable.IsTransactionable == true)
                                                {
                                                    <option value="@transactionable.AccountId" @(FixedAssetDetail != null && FixedAssetDetail.AccountId == transactionable.AccountId ? "selected" : "")>@transactionable.AccountCode (@transactionable.AccountNameEn)</option>
                                                }
                                            }
                                        }
                                    }
                                }
                            }
                        </select>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="card card-default card-outline col-lg-12">
        <div class="card-header">
            <h2 class="card-title">
                @SharedLocalizer.GetLocalizedHtmlString("Description")
            </h2>
        </div>
        <div class="card-body p-2">
            <textarea id="Description" name="Description" class="form-control " style="border:none" placeholder="Enter your description here...">@(FixedAssetDetail != null ? FixedAssetDetail.Description : "")</textarea>
        </div>
    </div>
    <div class="card card-default card-outline col-lg-12">
        <div class="card-header">
            <h2 class="card-title">
                @SharedLocalizer.GetLocalizedHtmlString("Book Value")
            </h2>
        </div>
        <div class="card-body">
            <div class="row">
                <div class="col-sm-5">
                    <div class="form-group">
                        <label>@SharedLocalizer.GetLocalizedHtmlString("Depreciation Start Date")</label>
                        <input name="DepreciationStartDate" id="DepreciationStartDate" class="form-control DatePicker" value="@(FixedAssetDetail != null && FixedAssetDetail.DepreciationStartDate != null ? Convert.ToDateTime(FixedAssetDetail.DepreciationStartDate).ToString("dd-MMM-yyyy") : "")" />

                    </div>
                </div>
                <div class="col-sm-2">
                    <div class="form-group">
                        <label>@SharedLocalizer.GetLocalizedHtmlString("Cost Limit")</label>
                        <input type="number" id="CostLimit" name="CostLimit" class="form-control" value="@(FixedAssetDetail != null ? FixedAssetDetail.CostLimit : 0)">
                    </div>
                </div>
                <div class="col-sm-2">
                    <div class="form-group">
                        <label>@SharedLocalizer.GetLocalizedHtmlString("Residual Value")</label>
                        <input type="number" id="ResidualValue" name="ResidualValue" class="form-control" value="@(FixedAssetDetail != null ? FixedAssetDetail.ResidualValue : 0)">
                    </div>
                </div>
                <div class="col-sm-5">
                    <div class="form-group">
                        <label>@SharedLocalizer.GetLocalizedHtmlString("Depreciation Method")</label>
                        <select id="DepreciationMethodId" name="DepreciationMethodId" class="form-control">
                            <option></option>
                            @foreach (var item in Model.DepreciationMethod)
                            {
                                <option value="@item.Code" @(FixedAssetDetail != null && FixedAssetDetail.DepreciationMethodId == item.Code ? "selected" : "")> @item.LookupNameEn</option>

                            }
                        </select>
                    </div>
                </div>
                <div class="col-sm-2">
                    <div class="form-group">
                        <label>@SharedLocalizer.GetLocalizedHtmlString("Average Method")</label>
                        <select id="AverageMethodId" name="AverageMethodId" class="form-control">
                            <option></option>
                            @foreach (var item in Model.AverageMethod)
                            {
                                <option value="@item.Code" @(FixedAssetDetail != null && FixedAssetDetail.AverageMethodId == item.Code ? "selected" : "")> @item.LookupNameEn</option>

                            }
                        </select>
                    </div>
                </div>
                <div class="col-sm-2">
                    <div class="form-group">
                        <label>@SharedLocalizer.GetLocalizedHtmlString("Rate")</label>
                        <input type="number" id="Rate" name="Rate" class="form-control" value="@(FixedAssetDetail != null ? FixedAssetDetail.Rate : 0)">
                    </div>
                </div>
                <div class="col-sm-3">
                    <div class="form-group">
                        <label>@SharedLocalizer.GetLocalizedHtmlString("Effective Life (Years)")</label>
                        <select id="EffectiveLifeYears" name="EffectiveLifeYears" class="form-control">
                            <option></option>
                            @for (int i = 1; i <= 10; i++)
                            {
                                <option value="@i" @(FixedAssetDetail != null && FixedAssetDetail.EffectiveLifeYears == i ? "selected" : "")> @i </option>

                            }
                        </select>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="card card-default card-outline col-lg-12" style="display:none">
        <div class="card-header">
            <h2 class="card-title">
                @SharedLocalizer.GetLocalizedHtmlString("Organization Details")
            </h2>
        </div>
        <div class="card-body">
            <div class="row">

                <div class="col-sm-6">
                    <div class="form-group">
                        <label>@SharedLocalizer.GetLocalizedHtmlString("Company")</label>
                        <select id="CompanyId" name="CompanyId" class="form-control" >
                            <option></option>
                            @foreach (var item in Model.CompanyDetail)
                            {
                                <option value="@item.CompanyId" @(FixedAssetDetail != null && FixedAssetDetail.CompanyId == item.CompanyId ? "selected" : "")> @item.CoNameEn</option>

                            }
                        </select>
                    </div>
                </div>
                <div class="col-sm-6">
                    <div class="form-group">
                        <label>@SharedLocalizer.GetLocalizedHtmlString("Branch")</label>
                        <select id="BranchId" name="BranchId" class="form-control" >
                            @if (isEdit)
                            {
                                @foreach (var item in BranchDetails)
                                {
                                    <option value="@item.BranchId" @(FixedAssetDetail != null && FixedAssetDetail.BranchId == item.BranchId ? "selected" : "")> @item.BranchNameEn</option>

                                }
                            }
                        </select>
                    </div>
                </div>
            </div>
        </div>
    </div>
</form>

@section scripts{

    <script>
        $(function () {
            $('#Accli').addClass("menu-open");
            $('#Reportsli').removeClass("menu-open");
            $('#Statementsli').removeClass("menu-open");
            $('#AccPli').removeClass("menu-open");
            $('#AccRli').removeClass("menu-open");
            $('#Setupli').removeClass("menu-open");
        });


        $('#frmEdit').on('submit', function (e) {
            e.preventDefault();
            var actionType = $('#ACTION_TYPE').val();

            confirmAction('Confirm ?', 'Are you sure you want to save changes ?', 'info', 'Yes', 'No').then(function (result) {
                if (result.value == true) {

                    var params = $('#frmEdit').serialize();
                    $.ajax({
                        url: getApplicationName() + 'Finance/FixedAsset/' + actionType,
                        async: false,
                        type: "POST",
                        data: params,
                        success: function (data) {
                            if (data.result.isError != true) {
                                showMsg('Saved !', 'Record has been saved !', 'success');
                                setTimeout(function () {
                                    window.location = getApplicationName() + 'Finance/FixedAsset';
                                }, 500);
                            }
                            else if (data.result.msg != '') {
                                showMsg('Save Failed !', data.result.msg, 'error');
                            }
                            else {
                                showMsg('Save Failed !', 'Something went wrong. Try again', 'error');
                            }
                        }
                    });
                }
            });




        });

        $('#CompanyId').change(function () {
            var id = $('#CompanyId').val();

            $.ajax({
                url: getApplicationName() + 'Ajax/BranchCascading',
                async: false,
                type: "POST",
                data: { id: id },
                success: function (data) {
                    var item = '';

                    $.each(data.result, function (i, product) {
                        item += "<option value='" + product.branchId + "'>" + product.branchNameEn + "</option>";
                    });

                    $("#BranchId").html(item);

                }
            });

        });

    </script>

}