@using ErpOnClick.DAL.Models
@using ErpOnClick.ErpMain.Resources
@inject LocService SharedLocalizer

@{ List<Vendors> vendorsList = Model.vendorsList;
                int vendorId = Model.vendorId;
                DateTime fromDate = Model.fromDate;
                DateTime toDate = Model.toDate; 
    }



<div class="card card-default card-outline">

    <div class="card-header">
        <h2 class="card-title">
            @SharedLocalizer.GetLocalizedHtmlString("Vendor Report")
        </h2>
        <!-- tools box -->
        <div class="card-tools">
            <a id="printList" href="" target="_blank" class="btn btn-default btn-sm"><i class="fa fa-print fa-fw"></i>@SharedLocalizer.GetLocalizedHtmlString("Print")</a>
            <a href="~/Finance/VendorLedgerReport" type="button" class="btn  btn-sm btn-default">
                <i class="fas fa-arrow-left fa-fw"></i> @SharedLocalizer.GetLocalizedHtmlString("Return")
            </a>

        </div>
        <!-- /. tools -->
    </div>
    <div class="card-footer pb-0 pt-2 text-sm">
        <form id="frmSearch">
            <div class="row">


                <div class="col-sm-3">
                    <div class="form-group">
                        <label>@SharedLocalizer.GetLocalizedHtmlString("From Date") </label>
                        <input type="text" id="FromDate" name="FromDate" class="form-control DatePicker">
                    </div>
                </div>
                <div class="col-sm-3">
                    <div class="form-group">
                        <label>@SharedLocalizer.GetLocalizedHtmlString("To Date") </label>
                        <input type="text" id="ToDate" name="ToDate" class="form-control DatePicker">
                    </div>
                </div>
                <div class="col-sm-4">
                    <div class="form-group">
                        <label>@SharedLocalizer.GetLocalizedHtmlString("Vendor")</label>
                        <select name="VendorId" id="VendorId" class="form-control" required readonly>
                            @foreach (var item in vendorsList)
                            {
                                <option value="@item.VendorId" @(item.VendorId == vendorId ? "selected" : "disabled")> @item.VendorNameEn</option>}
                        </select>
                    </div>
                </div>
                <div class="col-sm-1">
                    <button style="margin-top:29px" type="submit" class="btn btn-primary btn-block"> @SharedLocalizer.GetLocalizedHtmlString("Search")</button>
                </div>
            </div>
        </form>
    </div>
    <div class="card-body">
        <div id="divList"></div>

    </div>
</div>


@section scripts{
    <script>

        $(function () {
            $('#Accli').addClass("menu-open");
            $('#Reportsli').addClass("menu-open");
            $('#Statementsli').removeClass("menu-open");
            $('#AccRli').removeClass("menu-open");
            $('#AccPli').removeClass("menu-open");
            $('#Setupli').removeClass("menu-open");
            if (@vendorId != 0) {

                var newfromdate ="@fromDate";
                var fdate = new Date("@fromDate");
                var tdate = new Date("@toDate");
                var FROMDATE = fdate.getFullYear() + '-' + String(fdate.getMonth() + 1).padStart(2, '0') + '-' + String(fdate.getDate()).padStart(2, '0');
                var TODATE = tdate.getFullYear() + '-' + String(tdate.getMonth() + 1).padStart(2, '0') + '-' + String(tdate.getDate()).padStart(2, '0');

                $('#FromDate').val((FROMDATE));
                $('#ToDate').val(TODATE);
                $('#divList').html('<h5 class="margin-0"><p><i class="fa fa-spinner fa-spin fa-fw"></i> Please wait while data is loading...</p></h5>');
                $.ajax({
                    url:    getApplicationName()+'Finance/VendorReport/_list',
                    data: $('#frmSearch').serialize(),
                    success: function (data) {
                        $('#printList').show();

                        $('#divList').html(data);
                    }
                });
            }
            else
            {
            $('#printList').hide();

            var date = new Date();
            var dd = String(date.getDate()).padStart(2, '0');
            var mm = String(date.getMonth() + 1).padStart(2, '0')
            var yyyy = date.getFullYear();
            var premonth = parseInt(mm) - 1;
            var start = yyyy + '-' + mm + '-' + '01';
            today = yyyy + '-' + mm + '-' + dd;
            $('#FromDate').val(start);
            $('#ToDate').val(today);


            $('#frmSearch').submit(function (e) {

                e.preventDefault();
                BindGrid();
            })
            }
        });

        function BindGrid() {

            $('#divList').html('<h5 class="margin-0"><p><i class="fa fa-spinner fa-spin fa-fw"></i> Please wait while data is loading...</p></h5>');
            $.ajax({
                url:    getApplicationName()+'Finance/VendorReport/_list',
                data: $('#frmSearch').serialize(),
                success: function (data) {
                    $('#printList').show();

                    $('#divList').html(data);
                }
            })
        }

        $('#printList').click(function (e) {
            var FromDate = $('#FromDate').val();
            var ToDate = $('#ToDate').val();
            var VendorId = $('#VendorId').val();
            window.open(   getApplicationName()+"Finance/VendorReport/PrintList?FromDate=" + FromDate + "&ToDate=" + ToDate + "&VendorId=" + VendorId, "_blank");
        });
    </script>
}

