@using ErpOnClick.DAL.Models
@using ErpOnClick.ErpMain.Resources
@inject LocService SharedLocalizer

@{ List<Invoices> InvoiceMDetails = Model.invoiceMList; }
<div class="table-responsive pb-2 ">
    <table id="dtList" class="table table-hover table-condensed ">
        <thead class="text-sm">
            <tr class="col-lg-12">
                <th style="width:20px">@SharedLocalizer.GetLocalizedHtmlString("Id")</th>
                <th>@SharedLocalizer.GetLocalizedHtmlString("Customer")</th>
                <th>@SharedLocalizer.GetLocalizedHtmlString("Date")</th>
                <th>@SharedLocalizer.GetLocalizedHtmlString("Due Date")</th>
                <th>@SharedLocalizer.GetLocalizedHtmlString("Amount")</th>
                <th style="width:25px">@SharedLocalizer.GetLocalizedHtmlString("Edit")</th>
                <th style="width:25px">@SharedLocalizer.GetLocalizedHtmlString("Delete")</th>
            </tr>
        </thead>
        <tfoot style="display:table-row-group">
            <tr class="text-center">
                <th style="width:20px">Id</th>
                <th>Customer</th>
                <th>Date</th>
                <th>DueDate</th>
                <th>Amount</th>
                <td></td>
                <td></td>

            </tr>
        </tfoot>
        <tbody>
            @foreach (var item in InvoiceMDetails)
            {

<tr class="text-center">
    <td style="width:20px">@item.InvoiceId</td>
    <td class="text-left">@item.Customer.CustomerNameEn</td>
    <td>@Convert.ToDateTime(item.InvoiceDate).ToString("dd-MMM-yyyy")</td>
    <td>@Convert.ToDateTime(item.DueDate).ToString("dd-MMM-yyyy")</td>
    <td class="text-right">@item.SubTotal</td>
    <td class="text-center padding-5">
        <a href="@Url.Content("~/")Finance/Invoice/edit/@item.InvoiceId" class="btn btn-default btn-block  btn-xs "><i class="fa fa-edit"></i></a>
    </td>
    <td class="text-center padding-5">
        <a href="javascript:void(0)" class="btn btn-default btn-block btn-xs " onclick="deleteItem('@item.InvoiceId')"><i class="fa fa-times text-danger"></i></a>
    </td>
</tr>            }
        </tbody>
    </table>
</div>

<script>
    $(function () {
        $('#AccRli').addClass("menu-open");
        $('#AccPli').removeClass("menu-open");
        $('#Accli').removeClass("menu-open");
        $('#Setupli').removeClass("menu-open");
        _initDatatable('#dtList');
    });

    function deleteItem(id) {
        confirmAction('Confirm ?', 'Are you sure you want to save changes ?', 'info', 'Yes', 'No').then(function (result) {
            if (result.value == true) {
                $.ajax({
                    url: getApplicationName() + "Finance/Invoice/Delete",
                    async: false,
                    type: "POST",
                    data: { id },
                    success: function (data) {
                        if (data.result.isError == true) {
                            showMsg('Deleted !', 'Record has been deleted !', 'success');
                            setTimeout(function () {
                                window.location = getApplicationName() + 'Finance/Invoice';
                            }, 500);
                        }
                        else if (data.result.msg != '') {
                            showMsg('Delete Failed !', data.result.msg, 'error');
                        }
                        else {
                            showMsg('Delete Failed !', 'Something went wrong. Try again', 'error');
                        }
                    }
                });
            }
        });
    }
</script>
