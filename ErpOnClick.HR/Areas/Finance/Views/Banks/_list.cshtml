@using ErpOnClick.DAL.Models
@using ErpOnClick.ErpMain.Resources
@inject LocService SharedLocalizer

@{
    List<Banks> BankIdList = Model.BankIdList;

}

<div class="table-responsive pb-2 ">
    <table id="dtList" class="table table-hover table-condensed ">
        <thead class="text-sm ">
            <tr class="col-lg-12">
                <th width="10px"> @SharedLocalizer.GetLocalizedHtmlString("Id") </th>
                <th> @SharedLocalizer.GetLocalizedHtmlString("Name")</th>
                <th> @SharedLocalizer.GetLocalizedHtmlString("Account") </th>
                <th> @SharedLocalizer.GetLocalizedHtmlString("Primary Person") </th>
                <th> @SharedLocalizer.GetLocalizedHtmlString("Email") </th>
                <th> @SharedLocalizer.GetLocalizedHtmlString("Phone No") </th>
                <th> @SharedLocalizer.GetLocalizedHtmlString("Status")  </th>



                <th style="width:25px">@SharedLocalizer.GetLocalizedHtmlString("Edit")</th>
                <th style="width:25px">@SharedLocalizer.GetLocalizedHtmlString("Delete")</th>
            </tr>
        </thead>
        <tfoot style="display:table-row-group">
            <tr class="text-center">
                <th width="10px"> Id </th>
                <th> Name</th>
                <th> Account </th>
                <th> Primary Person </th>
                <th> Email </th>
                <th> Phone No </th>
                <th> Status  </th>


                <td></td>
                <td></td>
            </tr>
        </tfoot>
        <tbody>
            @foreach (var item in BankIdList)
            {

                <tr class="text-center">
                    <td> @(item.BankId != 0 ? item.BankId : 0) </td>
                    <td class="text-left"> @(item.BankNameEn !=null ? item.BankNameEn : "-") </td>
                    <td class="text-left"> @(item.Account != null && item.Account.AccountNameEn != null ? item.Account.AccountNameEn : "-") </td>
                    <td class="text-left"> @(item.PrimaryPerson != null ? item.PrimaryPerson : "-") </td>
                    <td class="text-left"> @(item.Email != null ? item.Email : "-") </td>
                    <td> @(item.PhoneNo != null ? item.PhoneNo : "-") </td>
                    <td class="text-center">
                        @if (item.ActiveStatus == "015001")
                        {
                            <i class="fa fa-check text-success"></i>
                        }
                        else if (item.ActiveStatus == "015002")
                        {
                            <i class="fa fa-times text-danger"></i>
                        }
                    </td>


                    <td class="text-center">
                        <a href="@Url.Content("~/")Finance/Banks/edit/@item.BankId" class="btn btn-default btn-block  btn-xs "><i class="fa fa-edit"></i></a>
                    </td>
                    <td class="text-center">
                        <a href="javascript:void(0)" class="btn btn-default btn-block btn-xs " onclick="deleteItem('@item.BankId')"><i class="fa fa-times text-danger"></i></a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>


<script>
    $(function () {
        $('#Accli').addClass("menu-open");
        $('#Reportsli').removeClass("menu-open");
        $('#Statementsli').removeClass("menu-open");
        $('#AccPli').removeClass("menu-open");
        $('#AccRli').removeClass("menu-open");
        $('#Setupli').removeClass("menu-open");

        _initDatatable('#dtList');
    });

    function deleteItem(id) {
        confirmAction('Confirm ?', 'Are you sure you want to save changes ?', 'info', 'Yes', 'No').then(function (result) {
            if (result.value == true) {

                $.ajax({
                    url: getApplicationName() + 'Finance/Banks/delete',
                    async: false,
                    type: "POST",
                    data: { id },
                    success: function (data) {
                        if (data.result.isError != true) {
                            showMsg('Deleted !', 'Record has been deleted !', 'success');
                            setTimeout(function () {
                                window.location = getApplicationName() + 'Finance/Banks';
                            }, 500);
                        }
                        else if (data.result.msg != '') {
                            showMsg('Delete Failed !', data.result.msg, 'error');
                        }
                        else {
                            showMsg('Delete Failed !', 'Something went wrong. Try again', 'error');
                        }
                    }
                });
            }
        });
    }

</script>