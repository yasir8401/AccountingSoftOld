                                            <option></option>
                                            @foreach (var taxitem in TaxList)
                                            {
                                                <option value="@taxitem.TaxPercent" id="@taxitem.TaxPercent" @(item != null && item.TaxRateId == taxitem.TaxRateId ? "selected" : "")>
