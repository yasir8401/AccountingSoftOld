            <h2 class="card-title">
                @SharedLocalizer.GetLocalizedHtmlString("Notes / Remarks")
            </h2>
        </div>
        <div class="card-body p-2">
            <textarea id="Note" name="Note" class="form-control " style="border:none" placeholder="Enter your comments here...">@(BillMDetails != null ? BillMDetails.Note:"")</textarea>
