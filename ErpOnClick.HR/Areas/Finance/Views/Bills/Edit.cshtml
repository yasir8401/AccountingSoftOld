                                <td><input type="text" id="Description" name="Description" class="text-left" value="@(item.Description != null ? item.Description : "")" /></td>
                                <td><input type="number" min="0" step="any" id="Qty" name="Qty" value="@(item.Qty != null ? item.Qty : 0)" /></td>
                                <td><input type="number" step="any" min="0" id="UnitPrice" name="UnitPrice" value="@(item.UnitPrice != null ? item.UnitPrice : 0)" /></td>
                                <td><input type="number" min="0" step="any" id="ItemPrice" name="ItemPrice" readonly value="@(item.ItemPrice != null ? item.ItemPrice : 0)" /></td>

