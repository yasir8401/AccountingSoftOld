                            <th></th>
                        </tr>
                        <tr>
                            <th colspan="3"></th>
                            <th style="text-align:right !important; padding-right:10px !important;">@SharedLocalizer.GetLocalizedHtmlString("VAT %")</th>
                            <th>
                                <select name="TaxRateId" id="TaxRateId" class="form-control" required>
                                    <option></option>
                                    @foreach (var taxitem in TaxList)
                                    {
                                        <option value="@taxitem.TaxPercent" id="@taxitem.TaxPercent" @(BillMDetails != null && BillMDetails.TaxRateId == taxitem.TaxRateId ? "selected" : "")>
