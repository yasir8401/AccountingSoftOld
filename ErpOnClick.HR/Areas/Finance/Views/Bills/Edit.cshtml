}

<link rel="stylesheet" href="@Url.Content("~/")adminlte/dist/css/invoice.css">



<form id="formEdit" role="form" method="post">
    <input type="hidden" id="ACTION_TYPE" name="ACTION_TYPE" value="@(isEdit ? "Update" : "Save")" />
    <input type="hidden" id="BillId" name="BillId" value="@(BillMDetails != null ? BillMDetails.BillId : 0)" />


    <div class="card card-default card-outline">
        <div class="card-header">
            <h2 class="card-title pt-1">
                @SharedLocalizer.GetLocalizedHtmlString("Bill")
            </h2>
