@section scripts{

    <script>

        $(function () {
            $('#AccPli').addClass("menu-open");
            $('#AccRli').removeClass("menu-open");
            $('#Accli').removeClass("menu-open");
            $('#Setupli').removeClass("menu-open");

            if ($('#BillId').val() == 0) {
                addRow(5);
            }
            else if ($('#BillId').val() != 0) {
                var table = $('#tblLines');
                table.find('tbody tr').each((i, item) => {
                    var tr = $(item);
                    var itemName = tr.find('#ItemId option:selected').text();
                    if (itemName != "") {
                        tr.find('#TaxPercent').prop("required", true);
                    }
                });
            }
            setTriggers();
        });


        $('#formEdit').submit(function (e) {
            e.preventDefault();


            var InvoiceM = Array();
            //InvoiceM.CreatedDate = $('#CreatedDate').val();
            InvoiceM.BillNo = $('#BillNo').val();
            InvoiceM.VendorId = parseInt($('#VendorId').val());
            console.log(InvoiceM);

            var BillD = Array();
            $("#tblLines TBODY TR").each(function () {
                ;
                var row = $(this);
                var InvoiceRows = {};
                var itemname = row.find('#ItemId').val();
                var itemname = row.find('#ItemId').val();
                if (itemname != "") {
                        InvoiceRows.LineId = row.find('#LineId').val();
                        InvoiceRows.ItemId = row.find('#ItemId').val();
                        InvoiceRows.Description = row.find('#Description').val();
                        InvoiceRows.Qty = parseFloat(row.find('#Qty').val());
                        InvoiceRows.UnitPrice = parseFloat(row.find('#UnitPrice').val());
                        InvoiceRows.ItemPrice = parseFloat(row.find('#ItemPrice').val());
                        //InvoiceRows.DiscountPercent = parseFloat(row.find('#DiscountPercent').val());
                        //InvoiceRows.DiscountAmount = parseFloat(row.find('#DiscountAmount').val());
                        InvoiceRows.TaxPercent = parseFloat(row.find('#TaxPercent').val());
                        InvoiceRows.TaxAmount = parseFloat(row.find('#TaxAmount').val());
                        InvoiceRows.LineAmount = parseFloat(row.find('#LineAmount').val());
                        InvoiceRows.IsDeleted = row.find('#IsDeleted').val();
                    BillD.push(InvoiceRows);
                }
            });
            console.log(BillD);
            var Invoice = {

                BillD: BillD,
                InvoiceM: InvoiceM,
                //IsInternationalCust: $('#IsInternationalCust').val(),
                VendorId: parseInt($('#VendorId').val()),
                //Currency: $('#Currency').val(),
                DueDate: $('#DueDate').val(),
                BillDate: $('#BillDate').val(),
                BillNo: $('#BillNo').val(),
                BillId: $('#BillId').val(),
                //RefNo: $('#RefNo').val(),
                SubTotal: $('#SubTotal').val(),
                Total: $('#Total').val(),
                TaxRateId: $('#TaxRateId option:selected').val(),
                TotalTax: $('#TotalTax').val(),
                //DiscountPer: $('#DiscountPer').val(),
                Note: $('#Note').val()
            };


            var params = $('#formEdit').serialize();
            var actionType = $('#ACTION_TYPE').val();

            confirmAction('Confirm ?', 'Are you sure you want to save changes ?', 'info', 'Yes', 'No').then(function (result) {
                if (result.value == true) {
                    $.ajax({
                        url: `@Url.Content("~")/Finance/Bills/${actionType}`,
                        data: Invoice,
                        type: 'POST',
                        async: false,
                        success: function (response) {
                            if (response.result.isError == false) {
                                showMsg('Saved !', 'Record has been saved !', 'success');
                                setTimeout(function () {
                                    window.location = getApplicationName() +'Finance/Bills/Index';
                                }, 1000);
                            }
                        }
                    });
                }
                });

        });



        function addRow(n) {
            var table = $('#tblLines');
            trSample = table.find('#trSample');
            for (var i = 0; i < n; i++) {
                var newRow = trSample.clone();
                newRow.removeAttr('id');
                table.find('tbody').append(newRow);
            }
            table.find('tbody tr').not('#trSample').show();
            setTriggers();

        }


        $('#TaxRateId').change(function () {
            var table = $('#tblLines');
            var tr;
            table.find('tbody tr').each((i, item) => {
                tr = $(item);
            });
            calculateTotal(tr);
        });



        function setTriggers() {
            var table = $('#tblLines');
            table.find('tbody tr').each((i, item) => {
                var tr = $(item);
                tr.find('#Qty,#UnitPrice').change(function () {
                    var qty = tr.find('#Qty').val();
                    var unitPrice = tr.find('#UnitPrice').val();
                    var itemprice = parseFloat(qty) * parseFloat(unitPrice);
                    tr.find('#ItemPrice').val(parseFloat(qty) * parseFloat(unitPrice));
                    tr.find('#LineAmount').val((itemprice));
                    calculateTotal(tr);

                    //var taxper = tr.find('#TaxPercent').val();
                    //if (taxper != "") {
                    //    var taxam = ((parseFloat(qty) * parseFloat(unitPrice)) * taxper) / 100;
                    //    tr.find('#TaxAmount').val(taxam);
                    //    tr.find('#LineAmount').val((itemprice + taxam));
                    //    calculateTotal(tr);
                    //}
                    //else {
                    //    tr.find('#LineAmount').val(itemprice);
                    //    calculateTotal(tr);
                    //}



                });
                tr.find('#ItemId').change(function () {

                    var itemName = tr.find('#ItemId option:selected').text();
                    var description = tr.find('#Description').val();

                    if (description == '') {
                        tr.find('#Description').val(itemName);
                    }
                    if (itemName != null) {
                        tr.find('#TaxPercent').prop("required", true);
                    }
                });


                tr.find('#DiscountPercent').change(function () {

                    var qty = tr.find('#Qty').val();
                    var unitPrice = tr.find('#UnitPrice').val();
                    var itemprice = parseFloat(qty) * parseFloat(unitPrice);
                    var Vat = tr.find('#TaxRateId').val();
                    if (Vat != "") {
                        var Vat = tr.find('#TaxRateId').val();
                        var taxam = ((parseFloat(qty) * parseFloat(unitPrice)) * Vat) / 100;
                        tr.find('#TaxAmount').val(taxam);
                        var discount = tr.find('#DiscountPercent').val();
                        if (discount != "") {
                            var totalamount = (itemprice + taxam);
                            var disam = totalamount * discount / 100;
                            tr.find('#DiscountAmount').val(disam);
                            var linediscount = (parseFloat(totalamount) - disam);
                            tr.find('#LineAmount').val(linediscount);
                            calculateTotal(tr);

                        }
                        else {
                            var lineamount = itemprice + taxam;
                            tr.find('#LineAmount').val(lineamount);
                            calculateTotal(tr);

                        }
                    }
                    else {
                        tr.find('#TaxAmount').val(0);
                        var discount = tr.find('#DiscountPercent').val();
                        if (discount != "") {
                            var totalamount = (itemprice);
                            var disam = totalamount * discount / 100;
                            tr.find('#DiscountAmount').val(disam);
                            var linediscount = (parseFloat(totalamount) - disam);
                            tr.find('#LineAmount').val(linediscount);
                            calculateTotal(tr);

                        }
                        else {
                            var lineamount = itemprice;
                            tr.find('#LineAmount').val(lineamount);
                            calculateTotal(tr);

                        }
                    }

                });

                tr.find('#TaxPercent').change(function () {
                    var qty = tr.find('#Qty').val();
                    var unitPrice = tr.find('#UnitPrice').val();
                    var itemprice = parseFloat(qty) * parseFloat(unitPrice);
                    var Vat = tr.find('#TaxPercent').val();
                    if (Vat != "") {
                        var Vat = tr.find('#TaxPercent').val();
                        var taxam = ((parseFloat(qty) * parseFloat(unitPrice)) * Vat) / 100;
                        tr.find('#TaxAmount').val(taxam);
                        var totalamount = (itemprice + taxam);
                        tr.find('#LineAmount').val(totalamount);
                        calculateTotal(tr);
                    }
                    else {
                        tr.find('#TaxAmount').val(0);
                        var totalamount = (itemprice);
                        tr.find('#LineAmount').val(totalamount);
                        calculateTotal(tr);
                    }
                });



            });
        }
        function deleteRow(tr) {
            tr.toggleClass('bg-danger');
            tr.find('a > #faDelete').toggle();
            tr.find('a > #faUndo').toggle();
            var inputFields = tr.find('#IsDeleted');

            var isDelete = tr.find('#IsDeleted').val();
            if (isDelete == "false") {
                tr.find('#IsDeleted').val("true");
            }
            if (isDelete == "true") {
                tr.find('#IsDeleted').val("false");
            }
            calculateTotal(tr);
        }
        function isNull(val) {
            if (parseFloat(val) > 0 || parseFloat(val) < 0) {
                return parseFloat(val);
            } else {
                return 0;
            }
        }

        function calculateTotal(tr) {
            var netPrice = 0;
            $("#tblLines > tbody  > tr").not(".bg-danger").each(function () {
                var tr = $(this);
                netPrice += isNull(tr.find('#LineAmount').val());
            });

            $('#Summary').find('#SubTotal').val(netPrice);
            var SubTotal = isNull($('#Summary').find('#SubTotal').val());
            var VatPercent = isNull($('#Summary').find('#TaxRateId').val());
            $('#Summary').find('#TotalTax').val(SubTotal * VatPercent / 100);
            var VatAmount = isNull($('#Summary').find('#TotalTax').val());
            $('#Summary').find('#Total').val(SubTotal + VatAmount);
        }

    </script>

}
