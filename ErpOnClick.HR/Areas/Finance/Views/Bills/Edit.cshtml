                </div>
                <div class="col-sm-2">
                    <div class="form-group ">
                        <label>@SharedLocalizer.GetLocalizedHtmlString("Due Date")</label>
                        <input name="DueDate" id="DueDate" class="form-control DatePicker" value="@(BillMDetails != null && BillMDetails.DueDate != null ? Convert.ToDateTime(BillMDetails.DueDate).ToString("dd-MMM-yyyy") : "")" />

                    </div>
