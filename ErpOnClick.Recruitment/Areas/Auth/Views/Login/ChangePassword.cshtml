@using ErpOnClick.DAL.Models
@{
    Layout = "~/Views/Shared/adminlte/_AuthLayout.cshtml";

    List<Company> CompanyDetails = Model.CompanyDetail;
    List<Branch> BranchDetails = Model.BranchDetail;
    JobPortalUsers userDetails = Model.userDetails;

}
<form id="frmEdit" role="form">
 
    <div class="register-box">
        <div class="card">
            <div class="card-body register-card-body">

                <div class="text-center">
                    <img src="~/adminlte/dist/img/Erponclick.png" alt="Logo">
                </div>
                <p class="login-box-msg mt-2 text-center"><b>Recruitment On Click</b><hr class="mt-0" /> Change Password Form</p>
                <input type="number" id="JobPortalUserId" hidden name="JobPortalUserId" class="form-control" value="@(userDetails.JobPortalUserId!=null ? userDetails.JobPortalUserId:0)" >

                <div class="row">
                    <div class="col-sm-12">
                        <div class="form-group">
                            <label>User Name</label>
                            <input type="text" id="UserName" name="UserName" class="form-control" value="@(userDetails.UserName!=null ? userDetails.UserName:"")" required>
                        </div>
                    </div>
                    <div class="col-sm-6">
                        <div class="form-group">
                            <label>Email</label>
                            <input type="email" id="Email" name="Email" class="form-control" value="@(userDetails.Email!=null ? userDetails.Email:"")" required />

                        </div>
                    </div>
                    <div class="col-sm-6">
                        <div class="form-group">
                            <label>Mobile No</label>
                            <input type="number" id="MobileNo" name="MobileNo" class="form-control" value="@(userDetails.MobileNo!=null ? userDetails.MobileNo:"")" required />
                        </div>
                    </div>
                    <div class="col-sm-6">
                        <div class="form-group">
                            <label>Company</label>
                            <select id="CompanyId" name="CompanyId" class="form-control" required>

                                @foreach (var item in CompanyDetails)
                                {
                                    <option value="@item.CompanyId" @(userDetails != null && userDetails.CompanyId == item.CompanyId ? "selected" : "")>
                                        @item.CoNameEn
                                    </option>
                                }
                            </select>
                        </div>
                    </div>
                    <div class="col-sm-6">
                        <div class="form-group">
                            <label>Branch</label>
                            <select id="BranchId" name="BranchId" class="form-control" required>

                                @foreach (var item in BranchDetails)
                                {
                                    <option value="@item.BranchId" @(userDetails != null && userDetails.BranchId == item.BranchId ? "selected" : "")>
                                        @item.BranchNameEn
                                    </option>

                                }
                            </select>
                        </div>
                    </div>
                    <div class="col-sm-4">
                        <div class="form-group">
                            <label>Old Password</label>
                            <input type="password" hidden id="orignalPasswordValue" value="@(userDetails.Password!=null ? userDetails.Password:"")" class="form-control" @*pattern="(?=.*\d)(?=.*[a-z])(?=.*[A-Z]).{8,}"*@ title="Must contain at least one number and one uppercase and lowercase letter, and at least 8 or more characters" required />
                            <input type="password" id="OldPassword" name="OldPassword" class="form-control" @*pattern="(?=.*\d)(?=.*[a-z])(?=.*[A-Z]).{8,}"*@ title="Must contain at least one number and one uppercase and lowercase letter, and at least 8 or more characters" required />
                        </div>
                    </div>
                    <div class="col-sm-4">
                        <div class="form-group">
                            <label>New Password</label>
                            <input type="password" id="Password" name="Password" class="form-control" @*pattern="(?=.*\d)(?=.*[a-z])(?=.*[A-Z]).{8,}"*@ title="Must contain at least one number and one uppercase and lowercase letter, and at least 8 or more characters" required />
                        </div>
                    </div>
                    <div class="col-sm-4">
                        <div class="form-group">
                            <label>Confirm Password</label>
                            <input type="password" id="ConfirmPassword" name="ConfirmPassword" class="form-control" @*pattern="(?=.*\d)(?=.*[a-z])(?=.*[A-Z]).{8,}"*@ title="Must contain at least one number and one uppercase and lowercase letter, and at least 8 or more characters" required />
                        </div>
                    </div>



                    <div class="col-sm-12">
                        <div class="form-group">
                            <button type="submit" class="btn btn-primary btn-block">Submit</button>
                        </div>
                    </div>
                    <div class="col-12 text-center p-1">
                        <a href="~/Home/index" style="color:inherit">Already have an account? Sign In</a>
                    </div>

                </div>


            </div>

        </div>

    </div>
</form>
@section scripts{

    <script>
        $(function () {

        });
        var applicationName = getApplicationName();


        $('#frmEdit').on('submit', function (e) {
         
            e.preventDefault();
            confirmAction('Confirm ?', 'Are you sure you want to Register yourself ?', 'info', 'Yes', 'No').then(function (result) {
                if (result.value == true) {
                  
                    var Password = $('#Password').val();
                    var confirm = $('#ConfirmPassword').val();
                    var oldPassword = $('#OldPassword').val();
                    var orignalPasswordValue = $('#orignalPasswordValue').val();
                    if (oldPassword == orignalPasswordValue)
                    {
                        if (Password == confirm) {
                            var params = $('#frmEdit').serialize();
                            $.ajax({
                                url: applicationName+ "Auth/Login/ChangePasswordValidation",
                                async: false,
                                type: "POST",
                                data: params,
                                success: function (data) {
                                    if (data.result.isError != true) {
                                        showMsg('Change Password Successfully');
                                        setTimeout(function () {
                                            window.location = applicationName+'Auth/login/Index';
                                        }, 600);
                                    }
                                    else if (data.result.msg != '') {
                                        showMsg('This Email Already Exist!');

                                    }
                                    else {
                                        showMsg('Save Failed !', 'Something went wrong. Try again', 'error');
                                    }

                                }
                            });
                        }
                        else {
                            showMsg('Password and confirm password are not same')
                        }
                    }
                    else {
                        showMsg('Old Password is Wrong Try Again')
                    }

                }
            });
        });

    </script>

}
