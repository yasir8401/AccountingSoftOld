@using ErpOnClick.DAL.Models
@{
    List<ErpOnClick.Recruitment.ViewModel.ApplicantLookUpViewModel> applicationList = Model.applicationList;

}

<div class="table-responsive pb-2 " >
    <table  class="table table-hover table-condensed ">
       
        <tfoot style="display:table-row-group ;background-color: #010B1D;color:white">
            <tr class="text-center">
                <th>Applicant Name</th>
                <th>Job Title </th>
                <th>Applied Date </th>
                <th>Email</th>
                <th>Phone</th>
                <th>Status</th>


            </tr>
        </tfoot>
        <tbody>
            @foreach (var item in applicationList)
            {

            <tr class="text-center">
               
                <td>@item.Application.ApplicantName</td>
                <td>@item.Application.VacantJobId</td>
                <td>@(item.Application.CreatedDate != null ? Convert.ToDateTime(item.Application.CreatedDate).ToString("dd-MMM-yyyy") : "")</td>
                <td>@item.Application.Email</td>
                <td>@item.Application.Phone</td>
                <td>@item.Lookup.LookupNameEn</td>
            </tr>
            }
        </tbody>
    </table>
</div>


<script>
    $(function () {

        _initDatatable('#dtList');
        $('#dtList').show();
    });
    var applicationName = getApplicationName();

    function deleteItem(id) {
        confirmAction('Confirm ?', 'Are you sure you want to save changes ?', 'info', 'Yes', 'No').then(function (result) {
            if (result.value == true) {

                $.ajax({
                    url: applicationName+ "admin/application/delete",
                    async: false,
                    type: "POST",
                    data: { id },
                    success: function (data) {
                        if (data.result.isError != true) {
                            showMsg('Deleted !', 'Record has been deleted !', 'success');
                            setTimeout(function () {
                                window.location = applicationName+'admin/application';
                            }, 500);
                        }
                        else if (data.result.msg != '') {
                            showMsg('Delete Failed !', data.result.msg, 'error');
                        }
                        else {
                            showMsg('Delete Failed !', 'Something went wrong. Try again', 'error');
                        }
                    }
                });
            }
        });
    }

</script>