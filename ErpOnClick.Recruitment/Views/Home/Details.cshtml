@using ErpOnClick.DAL.Models

@{
    VacantJobs vacantJob = Model.IdDetail;
    Layout = "_Layout";
}

@if (Model != null)
{
    <!-- Hero Area Start-->
    <div class="slider-area ">
        <div class="single-slider section-overly slider-height2 d-flex align-items-center" data-background="../../assets/img/hero/about.jpg">
            <div class="container">
                <div class="row">
                    <div class="col-xl-12">
                        <div class="hero-cap text-center">
                            <h2>@vacantJob.JobTitle</h2>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- Hero Area End -->
    <!-- job post company Start -->
    <div class="job-post-company pt-120 pb-120">
        <div class="container">
            <div class="row justify-content-between">
                <!-- Left Content -->
                <div class="col-xl-7 col-lg-8">
                    <!-- job single -->
                    <div class="single-job-items mb-50">
                        <div class="job-items">
                            <div class="company-img company-img-details">
                                <a href="#"><img src="~/assets/img/icon/job-list1.png" alt=""></a>
                            </div>
                            <div class="job-tittle">
                                <a href="#">
                                    <h4>@vacantJob.Company.CoNameEn</h4>
                                </a>
                                <ul>    
                                    <li></li>

                                    <li>$@vacantJob.SalaryRangeStart - $@vacantJob.SalaryRangeEnd</li>
                                </ul>
                            </div>
                        </div>
                    </div>
                    <!-- job single End -->

                    <div class="job-post-details">
                        <div class="post-details1 mb-50">
                            <!-- Small Section Tittle -->
                            <div class="small-section-tittle">
                                <h4>Job Description</h4>
                            </div>
                            <p>@Html.Raw(Convert.ToString(@vacantJob.JobDescription))  </p>
                        </div>
                        <div class="post-details2  mb-50">
                            <!-- Small Section Tittle -->
                            <div class="small-section-tittle">
                                <h4>Required Knowledge, Skills, and Abilities</h4>
                            </div>
                            <ul>
                                <li>System Software Development</li>
                                <li>Mobile Applicationin iOS/Android/Tizen or other platform</li>
                                <li>Research and code , libraries, APIs and frameworks</li>
                                <li>Strong knowledge on software development life cycle</li>
                                <li>Strong problem solving and debugging skills</li>
                            </ul>
                        </div>
                        
                    </div>

                </div>
                <!-- Right Content -->
                <div class="col-xl-4 col-lg-4">
                    <div class="post-details3  mb-50">
                        <!-- Small Section Tittle -->
                        <div class="small-section-tittle">
                            <h4>Job Overview</h4>
                        </div>
                        <ul>
                            <li>Posted date : <span>@(vacantJob.CreatedDate != null ? Convert.ToDateTime(vacantJob.CreatedDate).ToString("dd-MMM-yyyy") : "")</span></li>
                            <li>Vacancy : <span>02</span></li>
                            <li>Job nature : <span>@vacantJob.JobType.LookupNameEn</span></li>
                            <li>Salary :  <span>$ @(vacantJob.SalaryRangeEnd *12) yearly</span></li>
                            <li>Application date : <span>@(vacantJob.JobStartDate != null ? Convert.ToDateTime(vacantJob.JobStartDate).ToString("dd-MMM-yyyy") : "")</span></li>
                        </ul>
                        <div class="apply-btn2">
                            <a href="/application/edit/@vacantJob.JobId" class="btn">Apply Now</a>
                        </div>
                    </div>
                    <div class="post-details4  mb-50">
                        <!-- Small Section Tittle -->
                        <div class="small-section-tittle">
                            <h4>Company Information</h4>
                        </div>
                        <span>@vacantJob.Company.CoNameEn</span>
                        <p>We Deal In technology.</p>
                        <ul>
                            <li>Name: <span>@vacantJob.Company.CoNameEn </span></li>
                            <li>Web : <span> https://www.nayelsolutions.com/ </span></li>
                            <li>Email: <span>info@nayelsolutions.com </span></li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </div>
   

}
