@using ErpOnClick.DAL.Models
@using ErpOnClick.Authorization.Resources
@inject LocService SharedLocalizer

@{


    IList<Branch> branchList = Model.branchList;
    IList<Company> companyList = Model.companyList;

    Users UserDetails = Model.UserDetails;
    bool isEdit = (UserDetails != null);
}


<form id="frmEdit" role="form" enctype="multipart/form-data">
    <input type="hidden" id="ACTION_TYPE" name="ACTION_TYPE" value="@(isEdit ? "update" : "save")" />
    <input type="hidden" id="UserId" name="UserId" class="form-control" value="@(UserDetails != null ? UserDetails.UserId : 0)" @(isEdit ? "readonly" : "") min="3" maxlength="3">

    <div class="card card-primary card-outline card-outline-tabs">
        <div class="card-header p-0 border-bottom-0">
            <ul class="nav nav-tabs" id="custom-content-below-tab" role="tablist">
                <li class="nav-item">
                    <a class="nav-link active" id="tabMain-tab" data-toggle="pill" href="#tabMain" role="tab" aria-controls="tabMain" aria-selected="true">@SharedLocalizer.GetLocalizedHtmlString("User")</a>
                </li>

                @if(isEdit)
                {
                    <li class="nav-item">
                        <a class="nav-link" id="tabUserPrivileges-tab" data-toggle="pill" onclick="navigation()" href="javascript:void(0)">@SharedLocalizer.GetLocalizedHtmlString("User Privilage")</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" id="tabUserRole-tab" data-toggle="pill" onclick="navigationTwo()" href="javascript:void(0)">@SharedLocalizer.GetLocalizedHtmlString("User Roles")</a>
                    </li>
                }
            </ul>
        </div>



        <div class="card-body bg-gray-light">

            <div class="tab-content" id="custom-content-below-tabContent">
                <div class="tab-pane fade active show" id="tabMain" role="tabpanel" aria-labelledby="tabMain-tab">
                    <div>
                        <div class="card card-default card-outline col-lg-8">

                            <div class="card-header">
                                <h2 class="card-title mt-3">
                                    @SharedLocalizer.GetLocalizedHtmlString("Details")
                                </h2>
                                <!-- tools box -->
                                <div class="card-tools pr-0">
                                    <button type="submit" class="btn  btn-sm btn-primary">
                                        <i class="fas fa-save fa-fw"></i> @SharedLocalizer.GetLocalizedHtmlString("Save")
                                    </button>
                                    <a href="~/admin/user" type="button" class="btn  btn-sm btn-default">
                                        <i class="fas fa-arrow-left fa-fw"></i> @SharedLocalizer.GetLocalizedHtmlString("Return")
                                    </a>
                                </div>
                                <!-- /. tools -->
                            </div>
                            <div class="card-body">

                                <div class="row">
                                    <div class="col-sm-6">
                                        <div class="form-group">
                                            <label>@SharedLocalizer.GetLocalizedHtmlString("Name")</label>
                                            <input type="text" id="DisplayNameEn" name="DisplayNameEn" class="form-control" value="@(UserDetails!=null?UserDetails.DisplayNameEn: null)" required>
                                        </div>
                                    </div>
                                    <div class="col-sm-6">
                                        <div class="form-group">
                                            <label> @SharedLocalizer.GetLocalizedHtmlString("Name Arabic")</label>
                                            <input type="text" id="DisplayNameAr" name="DisplayNameAr" class="form-control" value="@(UserDetails!=null?UserDetails.DisplayNameAr: null)">
                                        </div>
                                    </div>
                                    <div class="col-sm-6">
                                        <div class="form-group">
                                            <label>@SharedLocalizer.GetLocalizedHtmlString("User Name")</label>
                                            <input type="text" id="UserName" name="UserName" class="form-control" value="@(UserDetails!=null?UserDetails.UserName: null)" required>
                                        </div>
                                    </div>
                                    <div class="col-sm-6">
                                        <div class="form-group">
                                            <label>@SharedLocalizer.GetLocalizedHtmlString("Email")</label>
                                            <input type="email" id="Email" name="Email" class="form-control" value="@(UserDetails!=null?UserDetails.Email: null)" required>
                                        </div>
                                    </div>
                                    <div class="col-sm-6">
                                        <div class="form-group">
                                            <label>@SharedLocalizer.GetLocalizedHtmlString("Password")</label>
                                            <input type="password" id="Password" name="Password" class="form-control" value="@(UserDetails!=null?UserDetails.Password: null)" required>
                                        </div>
                                    </div>
                                    <div class="col-sm-6">
                                        <div class="form-group">
                                            <label>@SharedLocalizer.GetLocalizedHtmlString("Phone No")</label>
                                            <input type="number" id="PhoneNo" name="PhoneNo" class="form-control" value="@(UserDetails!=null?UserDetails.PhoneNo: null)" required>
                                        </div>
                                    </div>


                                </div>

                            </div>






                        </div>
                        <div class="card card-default card-outline col-lg-8">
                            <div class="card-header">
                                <h2 class="card-title">
                                    @SharedLocalizer.GetLocalizedHtmlString("More Details")
                                </h2>
                            </div>
                            <div class="card-body">
                                <div class="row">

                                    <div class="col-sm-6">
                                        <div class="form-group">
                                            <label>@SharedLocalizer.GetLocalizedHtmlString("Email-Confirmed")</label>
                                            <select id="IsEmailConfirmed" name="IsEmailConfirmed" class="form-control" required>
                                                @*<option></option>*@
                                                <option value="True" @(UserDetails != null && UserDetails.IsEmailConfirmed == true ? "selected" : "")>Confirm</option>
                                                <option value="False" @(UserDetails != null && UserDetails.IsEmailConfirmed == false ? "selected" : "")>Not-Confrim</option>
                                            </select>
                                        </div>
                                    </div>
                                    <div class="col-sm-6">
                                        <div class="form-group">
                                            <label>@SharedLocalizer.GetLocalizedHtmlString("Phone-Confirmed")</label>
                                            <select id="IsPhoneNoConfirmed" name="IsPhoneNoConfirmed" class="form-control" required>
                                                @*<option></option>*@
                                                <option value="True" @(UserDetails != null && UserDetails.IsPhoneNoConfirmed == true ? "selected" : "")>Confirm</option>
                                                <option value="False" @(UserDetails != null && UserDetails.IsPhoneNoConfirmed == false ? "selected" : "")>Not-Confrim</option>
                                            </select>
                                        </div>
                                    </div>
                                    <div class="col-sm-6">
                                        <div class="form-group">
                                            <label>@SharedLocalizer.GetLocalizedHtmlString("Allow (TwoFactorAuth)")</label>
                                            <select id="AllowTwoFactorAuth" name="AllowTwoFactorAuth" class="form-control" required>
                                                @*<option></option>*@
                                                <option value="True" @(UserDetails != null && UserDetails.AllowTwoFactorAuth == true ? "selected" : "")>Yes</option>
                                                <option value="False" @(UserDetails != null && UserDetails.AllowTwoFactorAuth == false ? "selected" : "")>No</option>
                                            </select>
                                        </div>
                                    </div>
                                    <div class="col-sm-6">
                                        <div class="form-group">
                                            <label>@SharedLocalizer.GetLocalizedHtmlString("Is-Locked")</label>
                                            <select id="IsLocked" name="IsLocked" class="form-control" required>
                                                @*<option></option>*@
                                                <option value="True" @(UserDetails != null && UserDetails.IsLocked == true ? "selected" : "")>Yes</option>
                                                <option value="False" @(UserDetails != null && UserDetails.IsLocked == false ? "selected" : "")>No</option>
                                            </select>
                                        </div>
                                    </div>

                                    <div class="col-sm-6 ">
                                        <div class="form-group">
                                            <label>@SharedLocalizer.GetLocalizedHtmlString("Company")</label>
                                            <select id="CompanyId" name="CompanyId" class="form-control" required>
                                                <option></option>
                                                @foreach (var item in companyList)
                                                {
                                                    <option value="@item.CompanyId" @(UserDetails != null && UserDetails.CompanyId == item.CompanyId ? "selected" : "")>
                                                        @item.CoNameEn
                                                    </option>
                                                }
                                            </select>
                                        </div>
                                    </div>
                                    <div class="col-sm-6 ">
                                        <div class="form-group">
                                            <label>@SharedLocalizer.GetLocalizedHtmlString("Branch")</label>
                                            <select id="BranchId" name="BranchId" class="form-control" required>
                                                @if (isEdit)
                                                {
                                                    @foreach (var item in branchList)
                                                    {
                                                        <option value="@item.BranchId" @(UserDetails != null && UserDetails.BranchId == item.BranchId ? "selected" : "")>
                                                            @item.BranchNameEn
                                                        </option>
                                                    }
                                                }
                                            </select>
                                        </div>
                                    </div>
                                    <div class="col-sm-6">
                                        <div class="form-group">
                                            <label>@SharedLocalizer.GetLocalizedHtmlString("Is-Active")</label>
                                            <select id="IsActive" name="IsActive" class="form-control" required>
                                                @*<option></option>*@
                                                <option value="True" @(UserDetails != null && UserDetails.IsActive == true ? "selected" : "")>Active</option>
                                                <option value="False" @(UserDetails != null && UserDetails.IsActive == false ? "selected" : "")>Inactive</option>
                                            </select>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>


            </div>

        </div>
    </div>



</form>



@section scripts{

    <script>

        $(function () {

        });

        $('#frmEdit').on('submit', function (e) {
            e.preventDefault();
            var actionType = $('#ACTION_TYPE').val();

            confirmAction('Confirm ?', 'Are you sure you want to save changes ?', 'info', 'Yes', 'No').then(function (result) {
                if (result.value == true) {

                    var params = $('#frmEdit').serialize();
                    $.ajax({
                        url: getApplicationName() + "admin/User/" + actionType,
                        async: false,
                        type: "POST",
                        data: params,
                        success: function (data) {
                            if (data.result.isError != true) {
                                showMsg('Saved !', 'Record has been saved !', 'success');
                                setTimeout(function () {
                                    window.location = getApplicationName() + `admin/User/edit/${id}`;
                                }, 500);
                            }
                            else if (data.result.msg != '') {
                                showMsg('Save Failed !', data.result.msg, 'error');
                            }
                            else {
                                showMsg('Save Failed !', 'Something went wrong. Try again', 'error');
                            }
                        }
                    });


                }
            });




        });
  
        $('#CompanyId').change(function () {

            var id = $('#CompanyId').val();

            $.ajax({
                url: getApplicationName()+"Ajax/BranchCascading",
                async: false,
                type: "POST",
                data: { id: id },
                success: function (data) {

                    var item = '';

                    $.each(data.result, function (i, product) {

                        item += "<option value='" + product.branchId + "'>" + product.branchNameEn + "</option>";
                    });

                    $("#BranchId").html(item);

                }
            });

        });
         function navigation() {
            
                 window.location = getApplicationName() + 'admin/userprivileges/user/@(UserDetails!=null ? UserDetails.UserId : 0)';
        };
          function navigationTwo() {

              window.location = getApplicationName() + 'admin/UserRole/user/@(UserDetails!=null ? UserDetails.UserId : 0)';
            };
    </script>

}