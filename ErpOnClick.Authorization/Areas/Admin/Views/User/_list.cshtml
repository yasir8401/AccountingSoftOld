@using ErpOnClick.DAL.Models
@using ErpOnClick.Authorization.Resources
@inject LocService SharedLocalizer

@{
    List<Users> UserList = Model.UserList;

}

<div class="table-responsive pb-2 ">
    <table id="dtList" class="table table-hover table-condensed " style="display:none">
        <thead class="text-sm">
            <tr>
                <th width="10px">@SharedLocalizer.GetLocalizedHtmlString("Id") </th>
                <th>@SharedLocalizer.GetLocalizedHtmlString("Name") </th>
                <th> @SharedLocalizer.GetLocalizedHtmlString("User Name") </th>
                <th> @SharedLocalizer.GetLocalizedHtmlString("Email") </th>
                <th> @SharedLocalizer.GetLocalizedHtmlString("Phone No") </th>
                <th> @SharedLocalizer.GetLocalizedHtmlString("IsActive") </th>
                <th> @SharedLocalizer.GetLocalizedHtmlString("IsEmailConfirmed") </th>
                <th width="30px"></th>
                <th width="30px"></th>
            </tr>
        </thead>
        <tfoot style="display:table-row-group">
            <tr class="text-center">
                <th>Id </th>
                <th>Name </th>
                <th> User Name </th>
                <th> Email </th>
                <th> Phone </th>
                <th> Is-Active </th>
                <th> Email Confirmed </th>
                <th></th>
                <th></th>

            </tr>
        </tfoot>
        <tbody>
            @foreach (var item in UserList)
            {

                <tr class="text-center">
                    <td>@item.UserId </td>
                    <td class="text-left">@item.DisplayNameEn </td>
                    <td class="text-left">@item.UserName </td>
                    <td class="text-left">@item.Email </td>
                    <td class="text-right">@item.PhoneNo </td>
                    <td><i class="@(item.IsActive==true?"fa fa-check":"")"></i></td>
                    <td><i class="@(item.IsEmailConfirmed==true?"fa fa-check":"")"></i></td>
                    <td class="text-center padding-5">
                        <a href="~/admin/User/edit/@item.UserId" class="btn btn-default btn-block  btn-xs "><i class="fa fa-edit"></i></a>
                    </td>
                    <td class="text-center padding-5">
                        <a href="javascript:void(0)" class="btn btn-default btn-block btn-xs " onclick="deleteItem('@item.UserId')"><i class="fa fa-times text-danger"></i></a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>


<script>
    $(function () {

        _initDatatable('#dtList');
        $('#dtList').show();
    });

    function deleteItem(id) {
        confirmAction('Confirm ?', 'Are you sure you want to save changes ?', 'info', 'Yes', 'No').then(function (result) {
            if (result.value == true) {

                $.ajax({
                    url: getApplicationName() + "admin/User/delete",
                    async: false,
                    type: "POST",
                    data: { id },
                    success: function (data) {
                        if (data.result.isError != true) {
                            showMsg('Deleted !', 'Record has been deleted !', 'success');
                            setTimeout(function () {
                                window.location = getApplicationName() + 'admin/User';
                            }, 500);
                        }
                        else if (data.result.msg != '') {
                            showMsg('Delete Failed !', data.result.msg, 'error');
                        }
                        else {
                            showMsg('Delete Failed !', 'Something went wrong. Try again', 'error');
                        }
                    }
                });
            }
        });
    }

</script>